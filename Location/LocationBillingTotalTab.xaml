        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
           
        </Grid.RowDefinitions>
        <local:ucBaseGrid Name="GridLocationBillingTotal" Grid.Row="1"  Grid.Column="1" ></local:ucBaseGrid>
    </Grid>
