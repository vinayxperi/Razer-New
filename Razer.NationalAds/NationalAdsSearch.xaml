<RazerBase:ScreenBase x:Class="Razer.NationalAds.NationalAdsSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"             
             xmlns:igDP="http://infragistics.com/DataPresenter"          
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Border Grid.Row="1" Grid.ColumnSpan="4" BorderBrush="Gray" BorderThickness="0,0,0,1" >
        <Grid Background="{DynamicResource ApplicationBackgroundDark}" Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Grid.ColumnSpan="4">
                <Grid.RowDefinitions>                    
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <RazerBase:ucLabelTextBox Name="txtAccountName" LabelText="Customer Name:" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" LabelWidth="125" />
                <RazerBase:ucLabelTextBox Name="txtAdvertiser" LabelText="Advertiser:" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" LabelWidth="125" />
                <RazerBase:ucLabelTextBox Name="txtProduct" LabelText="Ad Product:" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" LabelWidth="125" />
                <RazerBase:ucLabelTextBox Name="txtReceivableAccount" LabelText="Customer ID:" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" LabelWidth="125" />
                <RazerBase:ucLabelComboBox Name="txtProductCode" LabelText="Product Code:    " Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" LabelWidth="100" />
                <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" >Pull Invoices in the following date range:</Label>
                <RazerBase:ucLabelDatePicker Name="ldpInvoiceFrom" Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="0" LabelText="Invoice From:" LabelWidth="120" />
                <RazerBase:ucLabelDatePicker Name="ldpInvoiceTo" Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="2" LabelText="Invoice To:" LabelWidth="120" />
            </Grid>
            <Grid Grid.Row="2" Grid.ColumnSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>
                <RazerBase:ucLabelTextBox Name="txtRows" LabelText="Rows:" Grid.Column="0" LabelWidth="50" IsReadOnly="True"/>
                <RazerBase:ucLabelTextBox Name="txtTotal" LabelText="Total:" Grid.Column="1" Grid.ColumnSpan="2" LabelWidth="50" IsReadOnly="True" />
                <Button Name="btnSearch" Content="Search" Height="23" Width="100" Grid.Column="4" Margin="14,10,6,0" Click="btnSearch_Click" />
                <Button Name="btnClear" Content="Clear" Height="23" Width="100" Grid.Column="5" Margin="4,10,16,0" Click="btnClear_Click" />
            </Grid>
            <RazerBase:ucBaseGrid x:Name="idgNationalAdsSearch" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4"></RazerBase:ucBaseGrid>
        </Grid>
    </Border>
</RazerBase:ScreenBase>

