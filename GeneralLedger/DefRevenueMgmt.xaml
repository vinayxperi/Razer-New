                               <!--/>-->
                    
 
    <RazerBase:ucBaseGrid Name="GridDefPoolMgmt" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" />


     <RazerBase:ucBaseGrid Name="GridDefPoolMgmtDetail" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" />



    </Grid>

    
       
    



