<local:ScreenBase x:Class="MiscFolders.WHTTrackingTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="720"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
            <RowDefinition Height="30" />
            <RowDefinition Height="200" />
            
        </Grid.RowDefinitions>
        <!-- Place Controls Here -->
        <!--<StackPanel Grid.Row="0" Margin="20,0,20,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Horizontal">-->
        <!--<local:ucLabelCheckBox Name="chkShowDocWithAdj" Grid.Row="1" Grid.Column="1" LabelText="Only Show Documents with WHT Adjustments" LabelWidth="300" BindPath="no_workflow_email_flag" Margin="0,0" />-->
        <!--</StackPanel>-->
        <!--<local:ucLabelCheckBox Name="chkShowDocWithAdj" LabelText="Only Show Documents with WHT Adjustments" LabelWidth="130" BindPath="no_workflow_email_flag" Margin="25,0" />-->
        <local:ucLabelDatePicker Name="txtInvoiceDateStart" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="1" LabelText="Invoice Date Start:"  LabelWidth="120" FontWeight="Bold" IsTabStop="True" />
        <local:ucLabelDatePicker Name="txtInvoiceDateEnd" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="1" LabelText="Invoice Date End:" LabelWidth="120" FontWeight="Normal" IsTabStop="True" />
        <Button  Name="btnRetrieve" Grid.Column="3"  Grid.Row="1" Click="btnRetrieve_Click" Width="110" Height="23"  HorizontalAlignment="Left" >Retrieve</Button>

        <local:ucBaseGrid Name="gWHTTracking" Grid.Row="2" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="4"></local:ucBaseGrid>
        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Row="4"   Grid.Column="1" Grid.ColumnSpan="2" >Adjustments Applied To Selected Document</Label>
        <local:ucBaseGrid Name="gWHTTrackingAdjbyDoc" Grid.Row="5" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="4"></local:ucBaseGrid>
    </Grid>
</local:ScreenBase>
