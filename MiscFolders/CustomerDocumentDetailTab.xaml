 <local:ScreenBase x:Class="MiscFolders.CustomerDocumentDetailTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="720"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}"><Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="10" />
        <ColumnDefinition Width="320" />
        <ColumnDefinition Width="320" />
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="10" />
        <RowDefinition Height="*" />
        <RowDefinition Height="200" />
        <RowDefinition Height="30" />
        <RowDefinition Height="200" />

    </Grid.RowDefinitions>
    <!-- Place Controls Here -->
    <local:ucBaseGrid Name="GridCustomerDocumentDetail" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3"></local:ucBaseGrid>
    <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Row="3"   Grid.Column="1"  >Applied To Selected Document</Label>
    <local:ucBaseGrid Name="GridCustomerDocumentApplied" Grid.Row="4" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3"></local:ucBaseGrid>
</Grid>
</local:ScreenBase>
