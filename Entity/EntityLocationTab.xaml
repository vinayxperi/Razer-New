<local:ScreenBase x:Class="Entity.EntityLocationTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="720"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="250" />
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="250" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Place Controls Here -->
            <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="1" >Locations for Contract Entity</Label>
            <local:ucBaseGrid Name="GridEntityLocation" Grid.Row="2" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3"></local:ucBaseGrid>
            <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="4" >Locations for Owner Entity</Label>
            <local:ucBaseGrid Name="GridOwnerEntityLocation" Grid.Row="5" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2"></local:ucBaseGrid>
        </Grid>
    </ScrollViewer>
</local:ScreenBase>
