<RazerBase:ScreenBase x:Class="Contact.SalespersonUpload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:igWindows="http://infragistics.com/Windows"
             xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900" Background="{DynamicResource ApplicationBackground}">
    <!--Resource area below added to allow for row color coding based on if the attachment is ediatble or not-->
    <UserControl.Resources>
        <!--The resource is needed to support the color coding of the rows in the grid-->
        <Style TargetType="{x:Type igDP:DataRecordPresenter}">
            <!--<Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="{Binding Path=Cells[color_status].Value, Converter={StaticResource AttachmentHighlightConverter}}" />
                </Setter.Value>
            </Setter>-->
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="35"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="126"/>
            <ColumnDefinition Width="290"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
          
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1" Grid.ColumnSpan="3" FontStyle="Italic">Select Row(s) to Change Salesperson Assignment</Label>
        <RazerBase:ucLabelComboBox Name="cmbSalesperson"   VerticalAlignment="Top" LabelText="Change to:" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="1" LabelWidth="90" />
        <Button Name="btnPreview" Click="btnPreview_Click" Grid.Row="1" Grid.Column="4" Margin="5,0,5,0" >Preview Changes</Button>
        <Button Name="btnClear" Click="btnClear_Click" Grid.Row="1" Grid.Column="5" Margin="5,0,5,0" >Clear Changes</Button>
        <Button Name="btnSave" Click="btnSave_Click" Grid.Row="1" Grid.Column="6" Margin="5,0,5,0" >Save Changes</Button>
        <!--<RazerBase:ucColorKey Grid.Row="1" Grid.Column="4"  Name="ColorKey" 
                                  GreenLabel="No Error"
                                  RedLabel="Error"
                              YellowVisible="false" TealVisible="false"
                                  ></RazerBase:ucColorKey>-->

        <RazerBase:ucBaseGrid Name="gUpload" Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="7"></RazerBase:ucBaseGrid>
    </Grid>
</RazerBase:ScreenBase>
