<local:ScreenBase x:Class="RazerBase.ucComments" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="720"
             x:Name="ucComments1"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="2*"/>
                <RowDefinition Height="30" />
                <RowDefinition Height="2*"/>
                <!--<RowDefinition />
                <RowDefinition />
                <RowDefinition />-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
            <Grid DataContext="{Binding ElementName=GridComments, Path=ActiveRecord}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />    
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0">Comments</Label>
            </Grid>
        </Border>
            <Border  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <local:ucBaseGrid x:Name="GridComments" Grid.Row="1"  Grid.RowSpan="1" Grid.ColumnSpan="2" Loaded="GridComments_Loaded" ></local:ucBaseGrid>
                </Grid>
            </Border>
            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0">Comment Text</Label>
            </Grid>
            </Border>
            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
                <Grid DataContext="{Binding ElementName=GridComments, Path=ActiveRecord, Mode=TwoWay}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                <TextBox x:Name="txtCommentText" Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" Text="{Binding Path=Cells[comment_text].Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                         VerticalAlignment="Top" MaxHeight="Infinity"  AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="Auto" MinHeight="120" />
                </Grid>
            </Border>
            <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0">Comment Attachments</Label>
                </Grid>
            </Border>
            <Border  Grid.Row="5" Grid.ColumnSpan="3" Grid.RowSpan="1"  BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition MaxHeight="800"/>
                        </Grid.RowDefinitions>
                        <local:ucAttachmentsTab x:Name="uCommentAttachments"  Grid.Row="0"  Grid.RowSpan="1" Grid.ColumnSpan="1" MinHeight="60"></local:ucAttachmentsTab>
                    </Grid>
                </Border>
        </Grid>
</local:ScreenBase>
