<local:ScreenBase x:Class="RazerBase.ucAttachmentsTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
                  xmlns:igDP="clr-namespace:Infragistics.Windows.DataPresenter;assembly=InfragisticsWPF.DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="720"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}" AllowDrop="True" Drop="ScreenBase_Drop">

    <UserControl.Resources>
        <!--The resource is needed to support the color coding of the rows in the grid-->
        <Style TargetType="{x:Type igDP:DataRecordPresenter}">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="{Binding Path=Cells[color_status].Value, Converter={StaticResource AttachmentHighlightConverter}}" />
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    
    <Grid>
         
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>

            <RowDefinition Height="40" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        
        <local:ucColorKey Grid.Row="0" Grid.Column="1" x:Name="AttachColorKey" Visibility="Collapsed" 
                          GreenLabel="Edits Allowed"
                          RedVisible="False" 
                          YellowVisible="False" 
                          TealVisible="False" >
            
        </local:ucColorKey>
        <local:ucBaseGrid x:Name="GridAttachments" Grid.Row="1" Grid.Column="1" AllowWindowDrag="True"  > </local:ucBaseGrid>
        <!--<local:ucBaseGrid x:Name="GridAttachments" Grid.RowSpan="2" Grid.ColumnSpan="2"></local:ucBaseGrid>-->
            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="CopyBorder" Visibility="Collapsed" >
            <Grid>
                <Grid.RowDefinitions>
                <RowDefinition/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--<local:ucLabelTextBox x:Name="txtCopyToId" LabelText="Document ID/RA:" LabelWidth="110" Grid.Column="0" Grid.Row="0" Visibility="Collapsed"  ></local:ucLabelTextBox>-->
            <!--<Button Name="btnCopy" Content="Copy Selected Attachments" MaxHeight="30" MaxWidth="180" Grid.Column="1" Grid.Row="0" Visibility="Collapsed"  Click="btnCopy_Click" />-->
            <!--<Button Name="btnCancel" Content="Cancel Copy" MaxHeight="30" MaxWidth="180" Grid.Column="2" Grid.Row="0" Visibility="Collapsed"  Click="btnCancel_Click" />-->
        </Grid>
        </Border>
        <!--<TextBox Name="txtDate" Grid.Row="3"  />
        <TextBox Name="txtUser" Grid.Row="3" />
        <TextBox Name="txtFileName" Grid.Row="3" />
        <TextBox Name="txtSubject"  />-->
        
         
    </Grid>
</local:ScreenBase>
