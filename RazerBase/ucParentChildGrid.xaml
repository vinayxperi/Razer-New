<local:ScreenBase x:Class="RazerBase.ucParentChildGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:igDP="http://infragistics.com/DataPresenter" 
             xmlns:local="clr-namespace:RazerBase"  
             mc:Ignorable="d" 
             d:DesignHeight="404" d:DesignWidth="703">
    <Grid Background="{DynamicResource  ApplicationBackground}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <local:ucBaseGrid x:Name="uGridParent" Grid.RowSpan="2" Grid.ColumnSpan="2" igDP:XamDataGrid.SelectedItemsChanged="Grid_SelectedItemsChanged"></local:ucBaseGrid>
        <local:ucBaseGrid x:Name="uGridChild" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="0,5,0,0"></local:ucBaseGrid>

    </Grid>
</local:ScreenBase>
