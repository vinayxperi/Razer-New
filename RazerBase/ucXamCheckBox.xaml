<xam:XamCheckEditor x:Class="RazerBase.ucXamCheckBox"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:xam="http://infragistics.com/Editors"
                    xmlns:local="clr-namespace:RazerBase"
			 mc:Ignorable="d" 
			 d:DesignHeight="300" d:DesignWidth="300" IsThreeState="True">
	<xam:XamCheckEditor.Resources>
		<Style TargetType="{x:Type xam:XamCheckEditor}">
			<Style.Resources>
				<Style x:Key="{x:Type xam:ValueEditorCheckBox}" TargetType="{x:Type xam:ValueEditorCheckBox}">
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="{x:Type xam:ValueEditorCheckBox}">
								<Border x:Name="MainBorder" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
									<Grid x:Name="CheckBox" VerticalAlignment="Center">
										<Rectangle x:Name="CheckBox_OuterBox" Fill="{DynamicResource EditorsBrushKeys.CheckBoxNormalOuterBoxCenterFillKey}" HorizontalAlignment="Left" Height="13" SnapsToDevicePixels="True" Stroke="{DynamicResource EditorsBrushKeys.CheckBoxNormalOuterBoxBorderFillKey}" VerticalAlignment="Top" Width="13"/>
										<Rectangle x:Name="CheckBox_InnerBox" Fill="{DynamicResource EditorsBrushKeys.CheckBoxNormalInnerBoxCenterFillKey}" HorizontalAlignment="Left" Height="9" Margin="2,2,0,0" SnapsToDevicePixels="True" Stroke="{DynamicResource EditorsBrushKeys.CheckBoxNormalInnerBoxBorderFillKey}" VerticalAlignment="Top" Width="9"/>
										<Grid x:Name="CheckMark" Margin="0" Visibility="Collapsed">
											<Path x:Name="Background" Data="M2.6673452,7.8617508C2.6673452,7.8617508 5.817048,10.192734 5.817048,10.192734 5.817048,10.192734 9.5967099,4.4942121 9.5967099,4.4942121" HorizontalAlignment="Left" Height="9.661" Margin="1.138,0.965,0,0" Opacity="0.8" Stretch="Fill" SnapsToDevicePixels="True" Stroke="{DynamicResource EditorsBrushKeys.CheckBoxCheckmarkBackgroundFillKey}" StrokeThickness="3" VerticalAlignment="Top" Width="10.137"/>
											<Path x:Name="Foreground" Data="M1.6839831,7.7438574C1.6839831,7.7438574 5.8697866,10.85053 5.8697866,10.85053 5.8697866,10.85053 10.540217,1.6301305 10.540217,1.6301305" HorizontalAlignment="Left" Height="8.915" Margin="1.855,1.465,0,0" Opacity="1" Stretch="Fill" SnapsToDevicePixels="True" Stroke="{DynamicResource EditorsBrushKeys.CheckBoxCheckmarkNormalForegroundFillKey}" StrokeThickness="1.75" VerticalAlignment="Top" Width="8.66"/>
										</Grid>
									</Grid>
								</Border>
								<ControlTemplate.Triggers>
									<Trigger Property="IsMouseOver" Value="True">
										<Setter Property="Fill" TargetName="CheckBox_InnerBox" Value="{DynamicResource EditorsBrushKeys.CheckBoxHottrackInnerBoxCenterFillKey}"/>
										<Setter Property="Stroke" TargetName="CheckBox_OuterBox" Value="{DynamicResource EditorsBrushKeys.CheckBoxHottrackOuterBoxBorderFillKey}"/>
										<Setter Property="Stroke" TargetName="CheckBox_InnerBox" Value="{DynamicResource EditorsBrushKeys.CheckBoxHottrackInnerBoxBorderFillKey}"/>
									</Trigger>
									<Trigger Property="IsPressed" Value="True">
										<Setter Property="Fill" TargetName="CheckBox_InnerBox" Value="{DynamicResource EditorsBrushKeys.CheckBoxPressedInnerBoxCenterFillKey}"/>
										<Setter Property="Stroke" TargetName="CheckBox_InnerBox" Value="{DynamicResource EditorsBrushKeys.CheckBoxPressedInnerBoxBorderFillKey}"/>
									</Trigger>
									<Trigger Property="IsChecked" Value="True">
										<Setter Property="Visibility" TargetName="CheckMark" Value="Visible"/>
									</Trigger>
									<Trigger Property="IsChecked" Value="{x:Null}">
										<Setter Property="Fill" TargetName="CheckBox_InnerBox" Value="{DynamicResource EditorsBrushKeys.CheckBoxCheckmarkNormalForegroundFillKey}"/>
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</Style.Resources>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type xam:XamCheckEditor}">
						<local:ucValueEditorCheckBox x:Name="PART_FocusSite" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" IsThreeState="{TemplateBinding IsThreeState}" IsChecked="{Binding IsChecked, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
						<ControlTemplate.Triggers>
							<Trigger Property="ReadOnly" Value="True">
								<Setter Property="IsEnabled" TargetName="PART_FocusSite" Value="False"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsEmbedded" Value="False">
					<Setter Property="BorderThickness" Value="1"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</xam:XamCheckEditor.Resources>
   
</xam:XamCheckEditor>
