<UserControl x:Class="RazerBase.ucLabelMultilineTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             x:Name="ucLabelMultilineTextBox1" DataContextChanged="ValidateDataContextChanged"
             d:DesignHeight="160" d:DesignWidth="300" SizeChanged="UserControl_SizeChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="GridLabelColumn" />
            <ColumnDefinition />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="40"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Style="{DynamicResource LabelLightUpStyle}"  Name="Label" 
               Content="[LabelText]" VerticalAlignment="Top" Width="99" Margin="1, 1, 0, 1" HorizontalContentAlignment="Right">
        </Label>
        <TextBox Style="{DynamicResource ResourceKey=TextBoxStyle}" Name="TextBox" 
                 Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2"                                  
                 TextWrapping="Wrap" VerticalContentAlignment="Top"
                 AcceptsReturn="true" HorizontalContentAlignment="Left" 
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                 VerticalScrollBarVisibility="Auto"
                 MaxHeight="Infinity" Margin="0, 8, 0, 8"
                 Text="{Binding ElementName=ucLabelMultilineTextBox1, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </TextBox>
    </Grid>
</UserControl>
