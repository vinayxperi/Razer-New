<local:ScreenBase x:Class="RazerBase.ucListSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local ="clr-namespace:RazerBase"
             mc:Ignorable="d"
             d:DesignHeight="490" d:DesignWidth="300" MinHeight="490" MinWidth="300" MaxHeight="490" MaxWidth="300">
    <StackPanel Margin="3">
        <TextBox Style="{DynamicResource TextBoxStyle}" MinHeight="40" Name="FilterTextBox" TextChanged="FilterTextBox_TextChanged" Height="40" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Margin="3" />
        <ListBox HorizontalAlignment="Stretch" Name="SelectionListBox" SelectionChanged="SelectionListBox_SelectionChanged"
                 VerticalAlignment="Stretch" MouseDoubleClick="SelectionListBox_MouseDoubleClick" 
                 Margin="3" />
    </StackPanel>
</local:ScreenBase>
