<UserControl x:Class="RazerBase.ucLabelDatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:RazerBase"
             x:Name="ucLabelDatePicker1" DataContextChanged="ValidateDataContextChanged"
            d:DesignHeight="40" d:DesignWidth="300">
    <UserControl.Resources>
        <local:DateConverter x:Key="dateConverter"></local:DateConverter>
 
    </UserControl.Resources>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="GridLabelColumn" />
            <ColumnDefinition />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*" />
        </Grid.RowDefinitions>
      
        <Label Style="{DynamicResource LabelLightUpStyle}"  Name="Label" Content="[LabelText]" Margin="1,1,0,1" Width="99" HorizontalContentAlignment="Right"></Label>
        <DatePicker Grid.Column="1"  d:LayoutOverrides="Height" Grid.ColumnSpan="2" Style="{DynamicResource DatePickerStyle1}"
                    VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" 
                    SelectedDate="{Binding ElementName=ucLabelDatePicker1, Converter={StaticResource dateConverter}, Path=SelText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Name="DatePicker" BorderBrush="{x:Null}" SelectedDateChanged="DatePicker_SelectedDateChanged" Background="{x:Null}" 
                    Text="{Binding ElementName=ucLabelDatePicker1, Converter={StaticResource dateConverter}, Path=SelText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     />
                    <!--DWR ADDED 3/26/13 added above binding to text property-->
    </Grid>
</UserControl>
