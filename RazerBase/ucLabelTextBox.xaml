<UserControl x:Class="RazerBase.ucLabelTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:RazerBase"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              mc:Ignorable="d" 
           HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             d:DesignHeight="40" d:DesignWidth="300" 
             x:Name="ucLabelTextBox1" DataContextChanged="ValidateDataContextChanged">
    <UserControl.Resources>
    
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="GridLabelColumn" />
            <ColumnDefinition />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="40"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Style="{DynamicResource LabelLightUpStyle}"  Name="Label" 
               Content="[LabelText]" Margin="1,1,0,1" Width="99" HorizontalContentAlignment="Right"></Label>
        <TextBox Name="TextBox" Background="#FFFFFFFF"
                 Grid.Column="1" Grid.ColumnSpan="2" Width="Auto" 
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" FontFamily="Helvetica" FontWeight="Bold" 
                 Text="{Binding ElementName=ucLabelTextBox1, Path=Text, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Height="25" 
                 PreviewKeyDown="TextBox_PreviewKeyDown" MouseDoubleClick="DoubleClickEventHandler" GotFocus="TextBox_GotFocus" >                
        </TextBox>
    </Grid>
</UserControl>
