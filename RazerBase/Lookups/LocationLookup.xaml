<local:DialogBase x:Class="RazerBase.Lookups.LocationLookup" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="571" d:DesignWidth="854"
             Height="Auto" Width="Auto" Background="{StaticResource ApplicationBackground}" Loaded="DialogBase_Loaded" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" MaxHeight="35"/>
            <RowDefinition Height="5*" MaxHeight="35"/>
            <RowDefinition Height="5*" MaxHeight="35"/>
            <RowDefinition Height="15*" MaxHeight="15"/>
            <RowDefinition Height="1*" MaxHeight="15"/>
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>
        <Label Style="{StaticResource LabelLightUpStyle}" >Location ID:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Column="2">Location Name:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1">Entity ID:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2"   >Entity Name:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1" Grid.Column="2" >PSA City: </Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1" Grid.Column="4" >PSA State:</Label>
       
        <CheckBox Name="chkInactive" Grid.Row="2" Grid.Column ="3" Style="{DynamicResource CheckBoxStyle}" HorizontalAlignment="Left" Click="chkInactive_Click">Show Inactives</CheckBox>
        <TextBox  Grid.Column="1" Name="txtLocationID" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Name="txtLocationName" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="1" Name="txtOwnerMSO" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="2" Name="txtEntityName" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Grid.Row="1" Name="txtPSACity" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="5" Grid.Row="1" Name="txtPSAState" TextChanged="FilterKeyPress"></TextBox>
        <!--<TextBox  Grid.Column="1" Grid.Row="1" Name="txtEntityCode" TextChanged="FilterKeyPress"></TextBox>-->
       
        <local:ucBaseLookup x:Name="uBaseLookup" Grid.Row="5" Grid.ColumnSpan="6" Margin="0,0,23,12"></local:ucBaseLookup>
    </Grid>
</local:DialogBase>
