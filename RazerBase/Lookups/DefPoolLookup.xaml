<local:DialogBase x:Class="RazerBase.Lookups.DefPoolLookup" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="571" d:DesignWidth="854"
             Background="{StaticResource ApplicationBackground}" Loaded="DialogBase_Loaded" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
          
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="35"/>
            <RowDefinition  Height="10"/>
            <RowDefinition Height="*" MinHeight="400" />
            <RowDefinition  Height="10"/>

        </Grid.RowDefinitions>
        <Label Style="{StaticResource LabelLightUpStyle}" >Deferred Account Code:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Column="2">Description:</Label>
        <TextBox  Grid.Column="1" Name="txtDefAcct" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Name="txtDescription" TextChanged="FilterKeyPress"></TextBox>
        <local:ucBaseLookup x:Name="uBaseLookup" Grid.Row="2" Grid.ColumnSpan="6" ></local:ucBaseLookup>
    </Grid>
</local:DialogBase>
