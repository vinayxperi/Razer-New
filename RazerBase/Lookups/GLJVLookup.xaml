<local:DialogBase x:Class="RazerBase.Lookups.GLJVLookup" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="571" d:DesignWidth="854"
             Height="Auto" Width="Auto" Background="{StaticResource ApplicationBackground}" Loaded="DialogBase_Loaded" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" MaxHeight="35"/>
            <RowDefinition Height="5*" MaxHeight="35"/>
            <RowDefinition Height="5*" MaxHeight="35"/>
            <RowDefinition Height="15*" MaxHeight="15"/>
            <RowDefinition Height="1*" MaxHeight="15"/>
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>
        <Label Style="{StaticResource LabelLightUpStyle}" >Journal Control Number:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Column="2">Description:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1">Control Group:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2"   >Date Posted:</Label>
       
       
      
        <TextBox  Grid.Column="1" Name="txtJournalID" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Name="txtDescription" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="1" Name="txtControlGroup" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="2" Name="txtDatePosted" TextChanged="FilterKeyPress"></TextBox>
       
       
        <local:ucBaseLookup x:Name="uBaseLookup" Grid.Row="5" Grid.ColumnSpan="6" Margin="0,0,23,12"></local:ucBaseLookup>
    </Grid>
</local:DialogBase>
