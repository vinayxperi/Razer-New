<local:DialogBase x:Class="RazerBase.Lookups.CustomerLookup" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="850"
             Height="650" Width="800" Background="{StaticResource ApplicationBackground}" Loaded="DialogBase_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="35"/>
            <RowDefinition Height="Auto" MinHeight="35"/>
            <RowDefinition Height="Auto" MinHeight="35"/>
            <RowDefinition Height="Auto" MinHeight="35"/>
            <RowDefinition Height="Auto" MinHeight="35"/>
            <RowDefinition />            
        </Grid.RowDefinitions>
        <Label Style="{StaticResource LabelLightUpStyle}" >Customer #</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Column="2">Customer Name</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1">Address</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1" Grid.Column="2">Account Description</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2" Grid.Column="0">City</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2" Grid.Column="2">State</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="3" Grid.Column="0">Country</Label>
        <CheckBox Name="chkInactive" Grid.Row="4" Style="{DynamicResource CheckBoxStyle}" HorizontalAlignment="Left" Click="chkInactive_Click">Show Inactives</CheckBox>
        <TextBox  Grid.Column="1" Name="txtReceivableAcct" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Name="txtAcctName" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="1" Name="txtAddress1" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Grid.Row="1" Name="txtAcctDescription" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="2" Name="txtCity" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Grid.Row="2" Name="txtState" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="3" Name="txtCountry" TextChanged="FilterKeyPress"></TextBox>
        <local:ucBaseLookup x:Name="uBaseLookup" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" ></local:ucBaseLookup>
    </Grid>
</local:DialogBase>
