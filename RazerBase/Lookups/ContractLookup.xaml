<local:DialogBase x:Class="RazerBase.Lookups.ContractLookup" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Height="Auto" Width="Auto" Background="{StaticResource ApplicationBackground}" Loaded="DialogBase_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MaxHeight="35"/>
            <RowDefinition Height="Auto" MaxHeight="35"/>
            <RowDefinition Height="Auto" MaxHeight="35"/>
            <RowDefinition Height="Auto" MaxHeight="35"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Style="{StaticResource LabelLightUpStyle}" >Contract ID:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Column="2">Contract Entity:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1">Contract Entity ID: </Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1" Grid.Column="2">Contract Description:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2" Grid.Column="0">Primary Product:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2" Grid.Column="2">CLM Number:</Label>
        <TextBox  Grid.Column="1" Name="txtContractID" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Name="txtContractEntity" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="1" Name="txtContractEntityID" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Grid.Row="1" Name="txtContractDescription" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="2" Name="txtPrimaryProduct" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Grid.Row="2" Name="txtLCRNumber" TextChanged="FilterKeyPress"></TextBox>
        <CheckBox Name="chkInactive" Grid.Row="3" Style="{DynamicResource CheckBoxStyle}" HorizontalAlignment="Left" Click="chkBox_Click"  >Show Inactives</CheckBox>
        <CheckBox Name="chkArchive" Grid.Row="3" Grid.Column="2" Style="{DynamicResource CheckBoxStyle}" HorizontalAlignment="Left" Click="chkBox_Click"  >Show Archived</CheckBox>
        <!--<local:ucLabelTextBox x:Name="txContractID" LabelText="Contract Entity ID:" BindPath="bill_mso_id" Grid.Column="0" LabelWidth="150" Grid.ColumnSpan="2" Keyboard.ke /> --> 
        <local:ucBaseLookup x:Name="uBaseLookup" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" ></local:ucBaseLookup>
        
    </Grid>
</local:DialogBase >
