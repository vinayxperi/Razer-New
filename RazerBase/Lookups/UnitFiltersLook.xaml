<local:DialogBase x:Class="RazerBase.Lookups.UnitFiltersLook"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="660" MaxWidth="660" MaxHeight="250"
             Height="Auto" Width="Auto" Background="{StaticResource ApplicationBackground}">
    <Grid>
        <Border  Grid.Column="1" Grid.Row="4" Height="220" HorizontalAlignment="Left" Name="border1" VerticalAlignment="Top" Width="640" Grid.ColumnSpan="2" Grid.RowSpan="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="20*" />
                </Grid.RowDefinitions>
                <local:ucLabelTextBox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" x:Name="tbSequence" VerticalAlignment="Top" Width="238" LabelText="Seq. ID:" IsEnabled="False" />
                <local:ucLabelComboBox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" x:Name="lcbFilter" VerticalAlignment="Center" Width="299" LabelText="Filter Field:" />
                <local:ucLabelComboBox Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left"  x:Name="lcbOperator" VerticalAlignment="Center" Width="300" LabelText="Operator:" />
                <local:ucLabelComboBox Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left" x:Name="lcbValues" VerticalAlignment="Center" Width="299" LabelText="Value(s):" />
                <local:ucLabelComboBox Grid.Column="2" Grid.Row="3" HorizontalAlignment="Left"  x:Name="lcbContract" VerticalAlignment="Center" Width="300" LabelText="Construct:" />
                <Button Content="Add" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Height="23" HorizontalAlignment="Center" Name="btnAdd" VerticalAlignment="Center" Width="75" Click="btnAdd_Click" />

            </Grid>
        </Border>

    </Grid>
</local:DialogBase>
