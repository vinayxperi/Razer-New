<local:DialogBase x:Class="RazerBase.Lookups.WorkflowEmail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
             Width="600" Height="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="100"/>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <local:ucLabelTextBox x:Name="txtSubject" LabelText="Subject: " Grid.Row="1" Grid.ColumnSpan="7" Grid.Column="1" LabelWidth="70" />
        <local:ucLabelMultilineTextBox x:Name="txtMessage" LabelText="Message: " Grid.Column="1" Grid.Row="2" Width="560" Grid.ColumnSpan="7" LabelWidth="70" TextWidth="490" />        
        <local:ucLabelComboBox x:Name="cmbUser" LabelText="Email Recipient:" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" LabelWidth="100" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsDefault="True" Name="btnOK" Grid.Column="6" Grid.Row="4" Width="75" Click="btnOK_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Name="btnCancel" Grid.Row="4" Grid.Column="7" VerticalAlignment="Bottom" Width="75" IsCancel="True" Click="btnCancel_Click"  />        
    </Grid>
</local:DialogBase>
