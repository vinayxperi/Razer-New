<local:DialogBase x:Class="RazerBase.Lookups.DefRevMgmtDocumentLookup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
                          d:DesignHeight="600" d:DesignWidth="800"
             Height="Auto" Width="Auto" Background="{StaticResource ApplicationBackground}" Loaded="DialogBase_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MaxHeight="35"/>
            <RowDefinition Height="Auto" MaxHeight="35"/>
            <RowDefinition Height="Auto" MaxHeight="35"/>
            <RowDefinition Height="Auto" MaxHeight="35"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Style="{StaticResource LabelLightUpStyle}" >Document ID:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1" Grid.Column="0">Customer Name:</Label>
        
        <TextBox  Grid.Column="1" Name="txtDocumentID" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="1" Name="txtCustomerName" TextChanged="FilterKeyPress"></TextBox>
        <local:ucBaseLookup x:Name="uBaseLookup" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" ></local:ucBaseLookup>
    </Grid>
</local:DialogBase>

