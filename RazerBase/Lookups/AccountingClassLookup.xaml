<local:DialogBase x:Class="RazerBase.Lookups.AccountingClassLookup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600" Background="{DynamicResource ApplicationBackground}"
        Title="Accounting Class Lookup">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <local:ucBaseLookup x:Name="uBaseLookup" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="5" ></local:ucBaseLookup>
        <TextBox  Name="txtAcct" VerticalAlignment="Top"  TextChanged="FilterKeyPress" MouseDoubleClick="txtAcct_MouseDoubleClick" Grid.Row="1" Grid.Column="2" />
        <TextBox  Name="txtDescription" VerticalAlignment="Top"  TextChanged="FilterKeyPress" Grid.Column="4" Grid.Row="1" />
        <Label Content="Acct Class:"  HorizontalAlignment="Left"  Name="label1" VerticalAlignment="Top"  Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="1" />
        <Label Content="Description:"  HorizontalAlignment="Left"  Name="label2" Style="{DynamicResource LabelLightUpStyle}" VerticalAlignment="Top"  Grid.Column="3" Grid.Row="1" />
    </Grid>
</local:DialogBase>
