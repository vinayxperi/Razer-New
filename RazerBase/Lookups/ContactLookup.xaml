<local:DialogBase x:Class="RazerBase.Lookups.ContactLookup" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
                          d:DesignHeight="500" d:DesignWidth="700"
             Height="Auto" Width="Auto" Background="{StaticResource ApplicationBackground}" Loaded="DialogBase_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MaxHeight="35"/>
            <RowDefinition Height="1*" MaxHeight="35"/>
            <RowDefinition Height="1*" MaxHeight="35"/>
            <RowDefinition Height="1*" MaxHeight="35"/>
            <RowDefinition Height="1*" MaxHeight="35"/>
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Label Style="{StaticResource LabelLightUpStyle}" >Contact ID</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Column="2">Contact Name</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1">Address</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1" Grid.Column="2">City</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2" Grid.Column="0">State</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2" Grid.Column="2">Description</Label>
        <CheckBox Name="chkInactive" Grid.Row="3" Style="{DynamicResource CheckBoxStyle}" HorizontalAlignment="Left" Click="chkInactive_Click">Show Inactives</CheckBox>
        <TextBox  Grid.Column="1" Name="txtContactId" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Name="txtContactName" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="1" Name="txtAddress" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Grid.Row="1" Name="txtCity" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="2" Name="txtState" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Grid.Row="2" Name="txtDesc" TextChanged="FilterKeyPress"></TextBox>
        <local:ucBaseLookup x:Name="uBaseLookup" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" ></local:ucBaseLookup>
    </Grid>
    </local:DialogBase>
