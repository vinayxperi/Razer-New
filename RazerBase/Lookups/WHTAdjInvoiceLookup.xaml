<local:DialogBase x:Class="RazerBase.Lookups.WHTAdjInvoiceLookup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:RazerBase"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="850"
             
        Title="InvoiceLookup"  Background="{StaticResource ApplicationBackground}" Loaded="DialogBase_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="142" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="27" />
            <ColumnDefinition Width="85" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35"/>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1" Grid.Column="1" Margin="1,1,0,1">Customer Name:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2" Grid.Column="1" Margin="1,1,0,1">Customer Number:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="3" Grid.Column="1" Margin="1,1,0,1">Document ID:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1" Grid.Column="4" >Country:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2" Grid.Column="4" >Province:</Label>
  
        
        <TextBox Grid.Column="1" Grid.Row="1" Name="txtAcctName" TextChanged="FilterKeyPress" Grid.ColumnSpan="2" Margin="115,5,0,5"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="2" Name="txtAcctNumber" TextChanged="FilterKeyPress" Grid.ColumnSpan="2" Margin="115,5,0,5"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="3" Name="txtDocumentID" TextChanged="FilterKeyPress" Grid.ColumnSpan="2" Margin="115,5,0,5"></TextBox>
        <TextBox Grid.Column="5" Grid.Row="1" Name="txtCountry" TextChanged="FilterKeyPress"></TextBox>
        <TextBox Grid.Column="5" Grid.Row="2" Name="txtProvince" TextChanged="FilterKeyPress"></TextBox>
 
        
        <local:ucBaseLookup x:Name="uBaseLookup" Grid.Row="5" Grid.Column="1"   Grid.ColumnSpan="6" ></local:ucBaseLookup>
    </Grid>
</local:DialogBase>
