<local:DialogBase x:Class="RazerBase.Lookups.UnpostedBillingBatchLookup" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700"
             Height="575" Width="750" Background="{StaticResource ApplicationBackground}" Loaded="DialogBase_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" MaxHeight="35"/>
            <RowDefinition Height="5*" MaxHeight="35"/>
            <RowDefinition Height="5*" MaxHeight="35"/>
            <RowDefinition Height="1*" MaxHeight="15"/>
            <RowDefinition Height="1*" MaxHeight="15"/>
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>
        <Label Style="{StaticResource LabelLightUpStyle}" >Batch ID:</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Column="2">Batch Name:</Label>
       
        <TextBox  Grid.Column="1" Name="txtBatchID" TextChanged="FilterKeyPress"></TextBox>
        <TextBox  Grid.Column="3" Name="txtBatchName" TextChanged="FilterKeyPress"></TextBox>
        
       
        
       
        <local:ucBaseLookup x:Name="uBaseLookup" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" ></local:ucBaseLookup>
    </Grid>
</local:DialogBase>
