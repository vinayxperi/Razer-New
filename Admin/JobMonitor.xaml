<RazerBase:ScreenBase x:Class="Admin.JobMonitor" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
                  xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Height="Auto" Width="Auto" >

    <Border Grid.Row="5" Grid.ColumnSpan="3" BorderBrush="Gray" BorderThickness="1,0,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15" />
                <RowDefinition Height="25" />
                <RowDefinition Height="475" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Place Controls Here -->
            <Label  Grid.Column="1" Grid.Row="1" FontSize="12" FontWeight="Bold">Jobs Scheduled to Run</Label>
            <RazerBase:ucBaseGrid Name="gJobSchedToRun" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3"  />
            <CheckBox Name="chkComplete" Grid.Row="1" Grid.Column="2" Style="{DynamicResource CheckBoxStyle}" Click="chkComplete_Click" Margin="10,5,256,0" Width="134">Complete Schedule</CheckBox>

            <!--<Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="Gray"  BorderThickness="2" >-->
           
          
            <!--</Border>-->
          
        </Grid>
    </Border>
</RazerBase:ScreenBase>