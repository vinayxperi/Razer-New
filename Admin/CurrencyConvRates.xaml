<RazerBase:ScreenBase x:Class="Admin.CurrencyConvRates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"             
             xmlns:igDP="http://infragistics.com/DataPresenter"          
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Border Grid.Row="1" Grid.ColumnSpan="4" BorderBrush="Gray" BorderThickness="0,0,0,1" >
        <Grid Background="{DynamicResource ApplicationBackgroundDark}" Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Grid.ColumnSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <RazerBase:ucLabelComboBox Name="cmbFromCurrency" LabelText="From Currency:" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" LabelWidth="90" />
                <RazerBase:ucLabelComboBox Name="cmbToCurrency" LabelText="To Currency" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" LabelWidth="90" />               
                <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" >Pull Rates in the following date range:</Label>
                <RazerBase:ucLabelDatePicker Name="ldpRateFrom" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="0" LabelText="Rates From:" LabelWidth="120" />
                <RazerBase:ucLabelDatePicker Name="ldpRateTo" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="2" LabelText="Rates To:" LabelWidth="120" />
            </Grid>
            <Grid Grid.Row="2" Grid.ColumnSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>
                <!--Margin="14,10,6,0" -->
                <!--Margin="4,10,16,0"-->
                <Button Name="btnSearch" Content="Search" Height="23" Width="100" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnSearch_Click" />
                <Button Name="btnClear" Content="Clear" Height="23" Width="100" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnClear_Click" />
                <Button Name="btnLoad" Content="Load Spreadsheet" Height="23" Width="160" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnLoad_Click" />
                <Button Name="btnUpload" Content="Upload Data" Height="23" Width="100" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" IsEnabled="False" Click="btnUpload_Click" />
            </Grid>
            <RazerBase:ucBaseGrid x:Name="idgCurrencyConvSearch" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"></RazerBase:ucBaseGrid>
        </Grid>
    </Border>
</RazerBase:ScreenBase>

