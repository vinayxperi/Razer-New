<RazerBase:ScreenBase x:Class="Admin.Audit"                 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
               xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
                  xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="880"
             Background="{StaticResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15" />
            <RowDefinition Height="45" />
            <RowDefinition Height="40" />
            <RowDefinition Height="275" />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Place Controls Here -->
        <RazerBase:ucLabelComboBox Name="cmbAuditTable" Grid.Row="1" Grid.Column="1" LabelText="Audit Table:" SelectionChanged="cmbAuditTable_SelectionChanged" />
        <RazerBase:ucLabelComboBox Name="cmbUser" Grid.Row="1" Grid.Column="2" LabelText="Changed By:"  SelectionChanged="cmbUser_SelectionChanged" />
        <RazerBase:ucLabelDatePicker Name="ldtFromDate" Grid.Row="2" Grid.Column="1"  LabelWidth="75" Height="35" LabelText="From Date:"   Grid.RowSpan="1"  />
        <RazerBase:ucLabelDatePicker Name="ldtToDate" Grid.Row="2" Grid.Column="2" LabelWidth="145" LabelText="To Date:" Height="35" Grid.RowSpan="1" />
        <Button Name="btnOK" Content="Retrieve" Height="23" Grid.Row="2" Grid.Column="3" Width="100"   Click="btnOK_Click"  />

        <RazerBase:ucBaseGrid Name="gridAuditDetail" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3"  Grid.RowSpan="6" />

       

        
       

    
       
    </Grid>
</RazerBase:ScreenBase>
