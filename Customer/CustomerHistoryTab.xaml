<local:ScreenBase x:Class="Customer.CustomerHistoryTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:igDP="http://infragistics.com/DataPresenter"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="720"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">

    <UserControl.Resources>
    <!--The resource is needed to support the color coding of the rows in the grid-->


        <Style TargetType="{x:Type igDP:DataRecordPresenter}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Cells[child_ind].Value}" Value="1">
                    <Setter Property="Background" Value="Cornsilk"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

             <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
            <!--<local:ucLabelCheckBox Name="chkShowHistoy" LabelText="Show All History" LabelWidth="120"  UnChecked="chkShowHistoy_UnChecked" Checked="chkShowHistoy_Checked" />-->
            <local:ucBaseGrid x:Name="GridAcctHistory" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2">            
        </local:ucBaseGrid>
            <!--<local:ucBaseGrid x:Name="GridAcctHistoryAll" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"></local:ucBaseGrid>-->
                 
        </Grid>

        
</local:ScreenBase>
