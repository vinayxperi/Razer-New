<RazerBase:ScreenBase x:Class="Customer.CustomerEmailInvoice" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
                  xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Height="Auto" Width="Auto" >

    <Border Grid.Row="5" Grid.ColumnSpan="3" BorderBrush="Gray" BorderThickness="1,0,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15" />
                <RowDefinition Height="25" />
                <RowDefinition Height="35" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="170" />
                <RowDefinition Height="25" />
                <RowDefinition Height="65" />
                <RowDefinition Height="85" />
                <RowDefinition Height="25" />
                <RowDefinition Height="160" />
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Place Controls Here -->
            <Label  Grid.Column="1" Grid.Row="1" FontSize="14" FontWeight="Bold">Email Document to Customer</Label>
            <RazerBase:ucLabelTextBox Name="txtSubject" LabelText="Subject:"  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"  MaxLength="50" />
            <Label  Grid.Column="1" Grid.Row="4" FontSize="11" FontWeight="Bold">Send Invoices to Selected Email Addresses </Label>
            <RazerBase:ucBaseGrid Name="gContactsforEmail" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" />
            <RazerBase:ucLabelMultilineTextBox Name="txtBody"   LabelText="Email Body" Grid.Row="7" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2"  Height="Auto" MinHeight="120" MaxLength="500"/>

            <Label  Grid.Column="1" Grid.Row="9" FontSize="11" FontWeight="Bold">Select Invoice(s) to attach to Email</Label>
            <RazerBase:ucBaseGrid Name="gInvoicesAvailToEmail" Grid.Column="1" Grid.Row="10" Grid.ColumnSpan="2"    />
            <Button Name="btnOK" Content="Email Invoices" Height="23" Grid.Row="11" Grid.Column="2" Width="100" Click="btnOK_Click" Margin="0,2,7,0" />
            </Grid>
                </Border> 
</RazerBase:ScreenBase>