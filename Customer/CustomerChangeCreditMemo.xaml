<RazerBase:ScreenBase x:Class="Customer.CustomerChangeCreditMemo" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Height="Auto" Width="Auto" >

    <Border Grid.Row="5" Grid.ColumnSpan="3" BorderBrush="Gray" BorderThickness="1,0,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="330" />
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15" />
                <RowDefinition Height="35" />
                <RowDefinition Height="45" />
                <RowDefinition Height="35" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="35" />
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Place Controls Here -->
            <Label  Grid.Column="1" Grid.Row="1" FontSize="14" FontWeight="Bold">Change CM Status</Label>
            <RazerBase:ucLabelTextBox Name="txtdocumentID"  Grid.Row="1" Grid.Column="2" LabelText="Document:"   IsEnabled="False"    />

            <!--<Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="Gray"  BorderThickness="2" >-->
           
            <!--<RazerBase:uc Name="cmbUser" Grid.Row="4" Grid.Column="2" LabelText="Email To:"    />-->

            <RazerBase:ucLabelTextBox Name="txtProduct"  Grid.Row="2" Grid.Column="2" LabelText="Product:"  IsEnabled="False" />
            <RazerBase:ucLabelCheckBox Name="chkOverride"  Grid.Row="2" Grid.Column="4" LabelWidth="150" LabelText="Override:"  Checked="chkOverride_Checked" UnChecked="chkOverride_UnChecked" />
            <RazerBase:ucLabelTextBox Name="txtBadDebt"  Grid.Row="3" Grid.Column="2" LabelText="Bad Debt:" IsReadOnly="True"  />
            <RazerBase:ucLabelTextBox Name="txtOverrideBadDebt"  Grid.Row="3" Grid.Column="4" LabelWidth="115" LabelText="Bad Debt Override:"    LostFocus="txtOverrideBadDebt_LostFocus" />
            <RazerBase:ucLabelTextBox Name="txtDeferred"  Grid.Row="4" Grid.Column="2" LabelText="Deferred:"  IsReadOnly="True"   />
            <RazerBase:ucLabelTextBox Name="txtOverrideDeferred"  Grid.Row="4" Grid.Column="4" LabelWidth="115" LabelText="Deferred Override:"      LostFocus ="txtOverrideDeferred_LostFocus"/>
            <RazerBase:ucLabelDatePicker Name="txtQtrFirstDetermined"  Grid.Row="5" Grid.Column="2" LabelWidth="130" LabelText="Qtr First Determined:"       />
            
            <!--<RazerBase:ucLabelTextBox Name="txtDispute"  Grid.Row="5" Grid.Column="2" LabelText="Disputed:"  IsEnabled="False" BindPath="dispute_amount"  />-->
            <!--</Border>-->
            <Grid Grid.Row="7" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Name="btnOK" Content="Update Status" Height="23" Grid.Column="1" Width="100" Click="btnOK_Click" Margin="0,2,7,0" Visibility="Collapsed"  />
                <Button Name="btnClose" Content="Close" Height="23" Grid.Column="2" Width="100" Click="btnClose_Click" Margin="0,2,7,0" />
            </Grid>
        </Grid>
    </Border>
</RazerBase:ScreenBase>