<RazerBase:DialogBase x:Class="SecurityMaintenance.SecurityUserTab"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                      xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
                      xmlns:local="clr-namespace:SecurityMaintenance"
                      xmlns:igWindows="http://infragistics.com/Windows"
                      mc:Ignorable="d" 
                      d:DesignHeight="480" d:DesignWidth="720"
                      Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" MinHeight="40" MaxHeight="40" />
            <RowDefinition Height="10" MinHeight="10" MaxHeight="10" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <RazerBase:ucLabelTextBox Grid.Column="0" HorizontalAlignment="Left" Name="txtUserID" VerticalAlignment="Center" LabelText="User ID:" Width="130" LabelWidth="66" IsReadOnly="True" BindPath="user_id" />
        </StackPanel>

        <Grid Grid.Row="2" Background="{DynamicResource ApplicationBackgroundDark}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Margin="20,0,20,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <RazerBase:ucLabelTextBox HorizontalAlignment="Left" Name="txtUserName" VerticalAlignment="Center" LabelText="Name:" Width="450" LabelWidth="85" BindPath="user_name" />
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="20,0,20,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <RazerBase:ucLabelTextBox HorizontalAlignment="Left" Name="txtPhone" VerticalAlignment="Stretch" LabelText="Phone:" Width="265" LabelWidth="85" BindPath="phone" />
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="20,0,20,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <RazerBase:ucLabelTextBox Name="txtEmail" LabelText="Email Address:" HorizontalAlignment="Left" LabelWidth="125" Width="600" BindPath="email_address" />
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="20,0,0,0" VerticalAlignment="Stretch" Orientation="Horizontal" HorizontalAlignment="Left" Width="658">
                <RazerBase:ucLabelComboBox HorizontalAlignment="Left" Name="cmbRole" VerticalAlignment="Center" LabelText="Role Assigned:" Width="268" LabelWidth="90" SelectedValue="{Binding Path=role_id, Mode=TwoWay}" Margin="35,0,0,0" Height="39" />
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="20,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Horizontal">
                <!--<RazerBase:ucLabelComboBox HorizontalAlignment="Left" Name="cmbSupervisor" VerticalAlignment="Center" LabelText="Supervisor:" Width="630" LabelWidth="85" SelectedValue="{Binding Path=supervisor_id, Mode=TwoWay}" Margin="35,0,0,0" />-->
                <RazerBase:ucLabelComboBox Grid.Column="0" HorizontalAlignment="Left" Name="cmbSupervisor" VerticalAlignment="Center" LabelText="Supervisor:" Width="269" LabelWidth="85" SelectedValue="{Binding Path=supervisor_id, Mode=TwoWay}" Margin="35,0,0,0" />
            </StackPanel>
            
            <!--<PasswordBox Name="txtdocumentID"  Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="1"  Background="LightBlue" Foreground="DarkBlue" MaxLength="10" PasswordChar="*" Password="" />-->
            <StackPanel Grid.Row="5" Margin="20,0,20,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Horizontal">
                <RazerBase:ucLabelTextBox HorizontalAlignment="Left" VerticalAlignment="Center" LabelText="Hostname:" LabelWidth="105" Width="400"  Name="txtHostname" BindPath="hostname" />
            </StackPanel>

            <StackPanel Grid.Row="6" Margin="20,0,20,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Horizontal">
                <RazerBase:ucLabelCheckBox Name="chkNoWorkflowEmail" LabelText="No Workflow Email:" LabelWidth="130" BindPath="no_workflow_email_flag" Margin="25,0" />
            </StackPanel>
            
            <StackPanel Grid.Row="8" HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Bottom">
                <Button Content="OK" Height="23" Name="btnOK" Width="75" Click="btnOK_Click" />
                <Separator Height="30" Width="5" Margin="5" />
                <Button Content="Cancel" Height="23" Name="btnCancel" Width="75" Click="btnCancel_Click" />
            </StackPanel>
            
        </Grid>
    </Grid>
</RazerBase:DialogBase>
