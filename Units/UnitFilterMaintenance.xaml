<RazerBase:ScreenBase x:Class="Units.UnitFilterMaintenance" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:igWindows="http://infragistics.com/Windows"
             xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />

        </Grid.RowDefinitions>
        <!-- Place Controls Here -->
        <RazerBase:ucLabelTextBox Grid.Column="1" Grid.Row="0" Name="txtFilterID"  LabelText="Filter ID:" IsEnabled="True" 
                               MouseDoubleClick="txtFilterID_MouseDoubleClick" LostFocus="txtFilterID_LostFocus" EnterActsLikeTab="True" LabelWidth="80" />
        <RazerBase:ucLabelTextBox Grid.Column="1" Grid.Row="1" BindPath="filter_name" Name="txtName" LabelWidth="80" Text="" LabelText="Filter Name:" />
        <RazerBase:ucLabelTextBox Grid.Column="1" Grid.Row="2" BindPath="filter_description" LabelWidth="80" Grid.ColumnSpan="2"
                              Name="txtDescription"  LabelText="Description:" />
        <RazerBase:ucLabelCheckBox Grid.Column="2" Grid.Row="0" Name="chkInactive" LabelText="Inactive:"  BindPath="inactive_flag" LabelWidth="100" 
                                   Checked="chkInactive_Checked" UnChecked="chkInactive_Checked"  />
        <RazerBase:ucLabelCheckBox Grid.Column="2" Grid.Row="1" Name="chkFilterEqualsOne" LabelText="Filter Equals 1:" BindPath="filter_equals_one_flag" LabelWidth="100" 
                                   Checked="chkFilterEqualsOne_Checked" UnChecked="chkFilterEqualsOne_Checked"   />
        <RazerBase:ucBaseGrid Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="4" Name="gFilter" />

    </Grid>
</RazerBase:ScreenBase>
