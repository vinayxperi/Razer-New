<local:ScreenBase x:Class="Units.UnitsFilter" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="711"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />

        </Grid.RowDefinitions>
        <!-- Place Controls Here -->
        <local:ucLabelTextBox Grid.Column="1" Grid.Row="0" BindPath="filter_id"  Name="tbFilterID"  LabelText="Filter ID:" IsEnabled="True" 
                              IsReadOnly="False"  MouseDoubleClick="tbFilterID_MouseDoubleClick" GotFocus="tbFilterID_GotFocus" 
                              LostFocus="tbFilterID_LostFocus" EnterActsLikeTab="True" LabelWidth="80" />
        <local:ucLabelTextBox Grid.Column="1" Grid.Row="1" BindPath="filter_name" Name="tbFilterName" LabelWidth="80" Text="" LabelText="Filter Name:" />
        <local:ucLabelTextBox Grid.Column="1" Grid.Row="2" BindPath="filter_description" LabelWidth="80" 
                              Name="tbFilterDescription"  LabelText="Description:" />
        <local:ucBaseGrid Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="4" Name="gFilterGrid" />
        <local:ucLabelCheckBox Grid.Column="2" Grid.Row="1" Name="cbInactive" LabelText="Inactive:"  BindPath="inactive_flag" LabelWidth="80"/>
        <local:ucLabelCheckBox Grid.Column="2" Grid.Row="2" Name="cbFilterToOne" LabelText="Filter Equals 1:" BindPath="filter_equals_one_flag" LabelWidth="80" />
    </Grid>
</local:ScreenBase>
