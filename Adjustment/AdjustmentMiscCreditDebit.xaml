<RazerBase:ScreenBase x:Class="Adjustment.AdjustmentMiscCreditDebit" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="880"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="350"/>
            <ColumnDefinition MaxWidth="250"/>
            <ColumnDefinition MaxWidth="350"/>
            <ColumnDefinition MaxWidth="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="50"/>
            <RowDefinition MaxHeight="30"/>
            <RowDefinition MaxHeight="150"/>
            <RowDefinition MaxHeight="30"/>
            <RowDefinition MaxHeight="150"/>
            <RowDefinition MaxHeight="150"/>
            <RowDefinition MaxHeight="35"/>
            <!--<RowDefinition MaxHeight="5"/>-->
        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="4"  Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="250"/>
                    <ColumnDefinition MinWidth="200"/>
                    <ColumnDefinition MinWidth="400"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="50"/>
                    <!--<RowDefinition MaxHeight="50"/>-->
                </Grid.RowDefinitions>
                <RazerBase:ucLabelTextBox Name="txtDocument" LabelText="Document to Adjust:" Grid.Column="0" Grid.Row="0" LabelWidth="125" LostFocus="txtDocument_LostFocus" GotFocus="txtDocument_GotFocus"   EnterActsLikeTab="True" />
                <!--<RazerBase:ucLabelComboBox Name="cmbProductCode" LabelText="Product:" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" LabelWidth="80" ></RazerBase:ucLabelComboBox>-->
                <RazerBase:ucLabelTextBox Name="txtAdjAmt" LabelText="Amount to Adjust:" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="1" LabelWidth="120" EnterActsLikeTab="True" LostFocus="txtAdjAmt_LostFocus" GotFocus="txtAdjAmt_GotFocus" Text="0.00"/>
            </Grid>
        </Border>
        <Border Grid.ColumnSpan="4"  Grid.Row="1" BorderBrush="Gray" BorderThickness="0,0,0,1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="30"/>
                </Grid.RowDefinitions>
                <Label FontWeight="Bold">Account Entry for Miscellaneous Debit/Credit</Label>
            </Grid>
        </Border>
        <Border Name="GLBorder" Grid.ColumnSpan="4"  Grid.Row="2" BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="150"/>
                    <ColumnDefinition MinWidth="150"/>
                    <ColumnDefinition MinWidth="100"/>
                    <ColumnDefinition MinWidth="100"/>
                    <ColumnDefinition MinWidth="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="50"/>
                    <RowDefinition MaxHeight="50"/>
                    <RowDefinition MaxHeight="50"/>
                    <RowDefinition MaxHeight="50"/>
                </Grid.RowDefinitions>
                <RazerBase:ucLabelTextBox Name="txtGLCompany" LabelText="A/R Company:" Grid.Row="0" Grid.Column="0" LabelWidth="88" IsEnabled="False" EnterActsLikeTab="True" BindPath="company_code" />
                <RazerBase:ucLabelTextBox Name="txtGLCostCtr" LabelText="A/R Cost Center:" Grid.Row="0" Grid.Column="1" LabelWidth="100" IsEnabled="False" EnterActsLikeTab="True" BindPath="gl_center"/>
                <RazerBase:ucLabelTextBox Name="txtGLAcct" LabelText="Natural Account:" Grid.Row="0" Grid.Column="2" LabelWidth="110" IsEnabled="False" EnterActsLikeTab="True" BindPath="gl_acct" />
                <RazerBase:ucLabelTextBox Name="txtGLProduct" LabelText="A/R Product:" Grid.Row="0" Grid.Column="3" LabelWidth="79" IsEnabled="False" EnterActsLikeTab="True" BindPath="gl_product" />
                <RazerBase:ucLabelTextBox Name="txtGLRegion" LabelText="A/R Region:" Grid.Row="0" Grid.Column="4" LabelWidth="75" IsEnabled="False" EnterActsLikeTab="True" BindPath="geography"/>
                <RazerBase:ucLabelTextBox Name="txtAcctName" LabelText="Acct Name:" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" LabelWidth="88" IsEnabled="False" BindPath="account_name"/>
                <RazerBase:ucLabelTextBox Name="txtCustomerId" LabelText="Cust ID:" Grid.Row="1" Grid.Column="2" LabelWidth="70" IsEnabled="False" BindPath="receivable_account"/>
                <RazerBase:ucLabelTextBox Name="txtProduct" LabelText="Product:" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" LabelWidth="77" IsEnabled="False" BindPath="product_code"/>
                <RazerBase:ucLabelTextBox Name="txtAmount" LabelText="Amount:" Grid.Row="2" Grid.Column="0" LabelWidth="88" IsEnabled="False" BindPath="amount"/>
                <RazerBase:ucLabelTextBox Name="txOpenAmount" LabelText="Open Amount:" Grid.Row="2" Grid.Column="1" LabelWidth="100" IsEnabled="False" BindPath="open_amount"/>
                <RazerBase:ucLabelTextBox Name="txtCurrency" LabelText="Currency:" Grid.Row="2" Grid.Column="2" LabelWidth="70" IsEnabled="False" BindPath="currency_code"/>
                <RazerBase:ucLabelTextBox Name="txtSeq" LabelText="Apply To Seq:" Grid.Row="2" Grid.Column="3" LabelWidth="90" IsEnabled="False" BindPath="apply_to_seq"/>
                <RazerBase:ucLabelTextBox Name="txtGLAmt" LabelText="Adjusted Amount:" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" LabelWidth="220" EnterActsLikeTab="True" LostFocus="txtGLAmt_LostFocus" Text="{Binding ElementName=txtAdjAmt, Path=Text}" IsReadOnly="True" GotFocus="txtGLAmt_GotFocus" IsEnabled="False"/>
            </Grid>
        </Border>
        <Border Grid.ColumnSpan="4"  Grid.Row="3" BorderBrush="Gray" BorderThickness="0,0,0,1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="30"/>
                </Grid.RowDefinitions>
                <Label FontWeight="Bold">G/L Offsetting Entry</Label>
            </Grid>
        </Border>
        <Border Name="GLOffsetBorder" Grid.ColumnSpan="4"  Grid.Row="4" BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="150"/>
                    <ColumnDefinition MinWidth="150"/>
                    <ColumnDefinition MinWidth="100"/>
                    <ColumnDefinition MinWidth="100"/>
                    <ColumnDefinition MinWidth="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="40"/>
                    <RowDefinition MaxHeight="30"/>
                    <RowDefinition MaxHeight="40"/>
                </Grid.RowDefinitions>
                <RazerBase:ucLabelTextBox Name="txtOffsetGLCompany" LabelText="G/L Company:" Grid.Row="0" Grid.Column="0" LabelWidth="93" EnterActsLikeTab="True" BindPath="offset_gl_co" IsEnabled="False"/>
                <RazerBase:ucLabelTextBox Name="txtOffsetGLCostCtr" LabelText="G/L Cost Center:" Grid.Row="0" Grid.Column="1" LabelWidth="110" EnterActsLikeTab="True" BindPath="offset_gl_center" IsEnabled="False"/>
                <RazerBase:ucLabelTextBox Name="txtOffsetGLAcct" LabelText="Natural Account:" Grid.Row="0" Grid.Column="2" LabelWidth="110" EnterActsLikeTab="True" BindPath="offset_revenue_acct" IsEnabled="False"/>
                <RazerBase:ucLabelTextBox Name="txtOffsetGLProduct" LabelText="G/L Product:" Grid.Row="0" Grid.Column="3" LabelWidth="75" EnterActsLikeTab="True" BindPath="offset_gl_product" IsEnabled="False"/>
                <RazerBase:ucLabelTextBox Name="txtOffsetGLRegion" LabelText="G/L Region:" Grid.Row="0" Grid.Column="4" LabelWidth="75" EnterActsLikeTab="True" BindPath="offset_geography" IsEnabled="False"/>
                <RazerBase:ucLabelTextBox Name="txtGLOffsetAmt" LabelText="G/L Offset Amt:" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" LabelWidth="220" EnterActsLikeTab="True" LostFocus="txtGLOffsetAmt_LostFocus" IsEnabled="False" GotFocus="txtGLOffsetAmt_GotFocus"/>
            </Grid>
        </Border>
        <Border Grid.ColumnSpan="4"  Grid.Row="5" BorderBrush="Gray" BorderThickness="0,0,0,1" >
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <RazerBase:ucLabelTextBox Name="txtRunningAdjAmt" LabelText="Adjusted Amt:" Grid.Row="1" Grid.Column="1" LabelWidth="90" IsReadOnly="True" Text="{Binding ElementName=txtGLAmt, Path=Text}" IsEnabled="False"/>
                <RazerBase:ucLabelTextBox Name="txtRunningOffsetAmt" LabelText="Offset Amt:" Grid.Column="2" Grid.Row="1" LabelWidth="80" IsReadOnly="True" Text="{Binding ElementName=txtGLOffsetAmt, Path=Text}" IsEnabled="False" />
            </Grid>
        </Border>
        <Border Grid.ColumnSpan="4" Grid.Row="6" BorderBrush="Gray" BorderThickness="0,0,0,1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="30"/>
                </Grid.RowDefinitions>
                <Button Name="btnSave" Height="30" Width="150" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" IsEnabled="False" Click="btnSave_Click"  >Save Adjustment</Button>
            </Grid>
        </Border>
        <Border Grid.ColumnSpan="4" Grid.Row="7" BorderBrush="Gray" BorderThickness="0,0,0,1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="30"/>
                </Grid.RowDefinitions>
            </Grid>
        </Border>
    </Grid>
</RazerBase:ScreenBase>
