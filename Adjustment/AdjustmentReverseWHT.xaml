<RazerBase:ScreenBase x:Class="Adjustment.AdjustmentReverseWHT" 
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:RazerConverters="clr-namespace:RazerConverters;assembly=RazerConverters"
             mc:Ignorable="d" 
             d:DesignHeight="880" d:DesignWidth="1020"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">

    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition MaxWidth="350"/>
            <ColumnDefinition MaxWidth="250"/>
            <ColumnDefinition MaxWidth="350"/>
            <ColumnDefinition MaxWidth="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition   Height="90" />
            <RowDefinition   Height="90"  />

            <RowDefinition  Height="90"  />


        </Grid.RowDefinitions>

        <RazerBase:ucLabelTextBox Name="txtDocument" LabelText="WHT Adjustment:" Grid.Column="0" Grid.Row="0" LabelWidth="125" EnterActsLikeTab="True" LostFocus="txtDocument_LostFocus" MouseDoubleClick="txtDocument_MouseDoubleClick" />
        <RazerBase:ucLabelTextBox Name="txtCustomer" LabelText="Customer:" Grid.Column="1" Grid.Row="0" LabelWidth="95" BindPath="receivable_account"  IsReadOnly="True"/>
        <RazerBase:ucLabelTextBox Name="txtInvAdjusted" LabelText="Invoice Adjusted:" Grid.Column="2" Grid.Row="0" LabelWidth="105" BindPath="invoice_number" IsReadOnly="True"/>
        <RazerBase:ucLabelComboBox Name="cmbProvince" LabelText="Province:" Grid.Column="0" Grid.Row="1" LabelWidth="80"  IsEnabled="False" />
        <RazerBase:ucLabelComboBox Name="cmbCountry" LabelText="Country:" Grid.Column="1"  Grid.Row="1" LabelWidth="80" IsEnabled="False"    />
        <RazerBase:ucLabelTextBox Name="txtRemit"   Grid.Column="2" LabelText="Cash Document:"  Grid.Row="1" LabelWidth="90" BindPath="document_id" IsEnabled="False"    />
        <RazerBase:ucLabelTextBox Name="txtWHTRate" LabelText="WHT Rate:" Grid.Column="3" LabelWidth="105"  Grid.Row="1" BindPath="wht_rate" IsReadOnly="True" />

        <RazerBase:ucLabelTextBox Name="txtIncomeWHT" LabelText="Income Subject to WHT:" Grid.Row="2" Grid.Column="0" LabelWidth="140" IsReadOnly="True" />
        <RazerBase:ucLabelTextBox Name="txtWHTAmount" LabelText="WHT Amount:" Grid.Column="1" Grid.Row="2" LabelWidth="110" IsReadOnly="True"  />
        <RazerBase:ucLabelTextBox Name="txtAdjAmt" LabelText="Amount to Reverse:" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="1" LabelWidth="120" IsReadOnly="True" 
                                            />
        <Button Name="btnSave" Height="30" Width="150" Grid.Column="4" Grid.Row="6" Grid.ColumnSpan="2" IsEnabled="False"  Click="btnSave_Click"  >Save Adjustment</Button>
    </Grid>



</RazerBase:ScreenBase>
