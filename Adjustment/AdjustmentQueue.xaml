<RazerBase:ScreenBase x:Class="Adjustment.AdjustmentQueue" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
                  xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}" >
    <!--Resource area below added to allow for row color coding based on if the attachment is ediatble or not-->
    <UserControl.Resources>
        <!--The resource is needed to support the color coding of the rows in the grid-->
        <Style TargetType="{x:Type igDP:DataRecordPresenter}">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="{Binding Path=Cells[color_status].Value, Converter={StaticResource AttachmentHighlightConverter}}" />
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    
    <Border BorderBrush="Gray" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15" />
                <RowDefinition Height="30" />
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
            </Grid.RowDefinitions>
            <!-- Place Controls Here -->
            <Label VerticalContentAlignment="Bottom"   Grid.Column="1" Grid.Row="1" FontSize="14" FontWeight="Bold">Adjustments to Approve</Label>
            <RazerBase:ucColorKey Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Name="ColorKey" 
                                  GreenLabel="Approved"
                                  YellowLabel="Not Submitted"
                                  RedLabel="Posting Error"
                                  TealLabel="Posting in Process"></RazerBase:ucColorKey>
            
            <RazerBase:ucBaseGrid Name="gAdjustmentQueue" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2"  />
           
            <!--<Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="Gray"  BorderThickness="2" >-->
           
          
            <!--</Border>-->
          
        </Grid>
    </Border>
</RazerBase:ScreenBase>