<local:ScreenBase x:Class="Adjustment.AdjustmentApprovalTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="500" />
            <ColumnDefinition />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition MinHeight="350" />
            <RowDefinition Height="120" />
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="25" />
                <RowDefinition Height="10" />
                <RowDefinition Height="25" />
                <RowDefinition Height="10" />
                <RowDefinition Height="25" />
                <RowDefinition Height="10" />
                <RowDefinition Height="25" />
                <RowDefinition Height="10" />
                <RowDefinition Height="25" />
                <RowDefinition Height="10" />
                <RowDefinition Height="25" />
                <RowDefinition Height="10" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button  Name="btnSubmit" Content="Submit" Grid.Row="1" Height="25" Width="110" HorizontalAlignment="Right" Click="btnSubmit_Click" />
            <Button  Name="btnApprove" Content="Approve" Grid.Row="3" Height="25" Width="110" HorizontalAlignment="Right" Click="btnApprove_Click" />
            <Button  Name="btnInquiry" Content="Inquiry" Grid.Row="5" Height="25" Width="110" HorizontalAlignment="Right" Click="btnInquiry_Click" />
            <Button  Name="btnReply" Content="Inquiry Reply" Grid.Row="7" Height="25" Width="110" HorizontalAlignment="Right" Click="btnReply_Click" />
            <Button  Name="btnReject" Content="Reject" Grid.Row="9" Height="25" Width="110" HorizontalAlignment="Right" Click="btnReject_Click" />
            <Button  Name="btnAddApprover" Content="Add Approver" Grid.Row="11" Height="25" Width="110" HorizontalAlignment="Right" Click="btnAddApprover_Click" />
        </Grid>
        <local:ucBaseGrid Name="gridAdjApproval" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" />
        <local:ucLabelMultilineTextBox Name="txtComments" LabelText="Comments" Grid.Column="2" Grid.Row="2" LabelWidth="75" Visibility="Collapsed" />
    </Grid>
</local:ScreenBase>
