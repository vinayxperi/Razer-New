<RazerBase:ScreenBase x:Class="Adjustment.AdjustmentCreditDebit" 
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:RazerConverters="clr-namespace:RazerConverters;assembly=RazerConverters"
             mc:Ignorable="d" 
             d:DesignHeight="880" d:DesignWidth="1020"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
   
        <Grid>
            <Grid.ColumnDefinitions>
               
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition  Height="40" />
                <RowDefinition Height="2*" />
                <RowDefinition  Height="10" />
                <RowDefinition  Height="5*" />
                <RowDefinition  Height="80" />
                <RowDefinition  Height="30" />
                
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="4" Grid.Column="0" Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="300"/>
                        <ColumnDefinition MinWidth="250"/>
                        <ColumnDefinition MinWidth="250"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="50"/>
                    </Grid.RowDefinitions>
                <RazerBase:ucLabelTextBox Name="txtDocument" LabelText="Document to Adjust:" Grid.Column="0" Grid.Row="0" LabelWidth="125" EnterActsLikeTab="True" LostFocus="txtDocument_LostFocus" />
                <RazerBase:ucLabelTextBox Name="txtAdjAmt" LabelText="Amount to Adjust:" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="1" LabelWidth="120" EnterActsLikeTab="True" LostFocus="txtAdjAmt_LostFocus" GotFocus="txtAdjAmt_GotFocus" 
                                          PreviewKeyDown="txtAdjAmt_PreviewKeyDown" />
                <RazerBase:ucLabelTextBox Name="txtRunningAdjAmt" LabelText="Adjusted Amt:" Grid.Row="0" Grid.Column="2" LabelWidth="90" IsEnabled="False" />
            </Grid>
            </Border>
            <Border Grid.ColumnSpan="4" Grid.Column="0" Grid.Row="1" BorderBrush="Gray" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="200"/>
                    <ColumnDefinition MinWidth="200"/>
                    <ColumnDefinition MinWidth="200"/>
                    <ColumnDefinition MinWidth="200"/>
                </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="30"/>
                    </Grid.RowDefinitions>
                <RazerBase:ucLabelCheckBox Name="txtZeroTax" LabelText="Zero Tax:" Grid.Column="1" LabelWidth="120" Checked="txtZeroTax_Checked" UnChecked="txtZeroTax_UnChecked" />
                <RazerBase:ucLabelCheckBox Name="txtCurrentTaxRate" LabelText="Use Current Tax Rates:" Grid.Column="2" LabelWidth="130" Checked="txtCurrentTaxRate_Checked" UnChecked="txtCurrentTaxRate_UnChecked" />
            </Grid>
            </Border>
            <Border Grid.ColumnSpan="4" Grid.Column="0" Grid.Row="2" BorderBrush="Gray" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  Width="10" />
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                      
                    </Grid.RowDefinitions>
                    <RazerBase:ucBaseGrid Name="GridCreditDebitSource" Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" />
                </Grid>
            </Border>
            <Border Grid.ColumnSpan="4" Grid.Column="0" Grid.Row="3" BorderBrush="Gray" BorderThickness="0,0,0,1" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="30"/>
                    </Grid.RowDefinitions>
                       <!--<RazerBase:ucLabelCheckBox Name="chkApplyUACash" LabelText="Apply Remainder to Unapplied Cash" Grid.Column="1" Grid.Row="1" LabelWidth="220" Grid.ColumnSpan="1" Checked="chkApplyUACash_Checked" UnChecked="chkApplyUACash_UnChecked"/>-->
                </Grid>
            </Border>
            <Border Name="BorderDestination"  Grid.ColumnSpan="4" Grid.Column="0" Grid.Row="4" BorderBrush="Gray" BorderThickness="0,0,0,1" IsEnabled="False">
                <Grid Height="Auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                   
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        
                    </Grid.RowDefinitions>
                <RazerBase:ucBaseGrid Name="GridCreditDebitDestination" Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" CntrlTabIndex="2" />

                </Grid>
            </Border>
            <Border Grid.ColumnSpan="4" Grid.Row="5" Grid.Column="0" BorderBrush="Gray" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="30"/>
                    </Grid.RowDefinitions>
                    <Button Name="btnSave" Height="30" Width="150" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" IsEnabled="False" Click="btnSave_Click"  >Save Adjustment</Button>
                    <Button Name="btnApplyCash" Height="30" Width="150" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="2" IsEnabled="False" Click="btnApplyCash_Click"  >Apply Cash</Button>
            </Grid>
            </Border>
           
          </Grid>
 
    </RazerBase:ScreenBase>
