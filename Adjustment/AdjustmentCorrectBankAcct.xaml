<RazerBase:ScreenBase x:Class="Adjustment.AdjustmentCorrectBankAcct" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="904"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="350"/>
                <ColumnDefinition MaxWidth="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition MaxWidth="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="50" Height="50*" />
                <RowDefinition MaxHeight="30" Height="30*" />
                <RowDefinition MaxHeight="150" Height="120*" />
                <RowDefinition MaxHeight="30" Height="30*" />
                <RowDefinition MaxHeight="150" Height="90*" />
                <RowDefinition MaxHeight="150" Height="150*" />
                <RowDefinition MaxHeight="30" Height="30*" />
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="4" Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,1">
                <Grid DataContext="{Binding ElementName=GridAdjustment, Path=ActiveRecord}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="250"/>
                        <ColumnDefinition MinWidth="200"/>
                        <ColumnDefinition MinWidth="400"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="50"/>
                    </Grid.RowDefinitions>
                <RazerBase:ucLabelTextBox Name="txtBatchID" LabelText="Batch to Adjust:" Grid.Column="0" Grid.Row="0" LabelWidth="125" LostFocus="txtBatchID_LostFocus" EnterActsLikeTab="True" MouseDoubleClick="txtBatchID_MouseDoubleClick" />
                    <!--<RazerBase:ucLabelTextBox Name="txtAdjAmt" LabelText="Amount to Adjust:" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="1" LabelWidth="120" EnterActsLikeTab="True" Text="{Binding Path=Cells[amt_to_adjust].Value, Mode=OneTime}" IsEnabled="True" LostFocus="txtAdjAmt_LostFocus" GotFocus="txtAdjAmt_GotFocus" />-->
                <RazerBase:ucLabelTextBox Name="txtAdjAmt" LabelText="Amount to Adjust:" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="1" LabelWidth="120" Text="0.00" EnterActsLikeTab="True" IsEnabled="False"  CntrlTabIndex="1"/>
                </Grid>
            </Border>
            <Border Grid.ColumnSpan="4" Grid.Row="1" BorderBrush="Gray" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="30"/>
                    </Grid.RowDefinitions>
                    <Label FontWeight="Bold" Grid.Row="0" Grid.Column="1">Document to Correct Bank Account</Label>
                </Grid>
            </Border>
            <Border Grid.ColumnSpan="3" Grid.Row="2" BorderBrush="Gray" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="150" Width="176" />
                        <ColumnDefinition MinWidth="150"/>
                        <ColumnDefinition MinWidth="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition MinWidth="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="40"/>
                        <RowDefinition MaxHeight="60"/>
                        <RowDefinition MaxHeight="60"/>
                        <RowDefinition MaxHeight="60"/>
                        <RowDefinition MaxHeight="60"/>
                        <RowDefinition MaxHeight="40"/>
                    </Grid.RowDefinitions>
                <RazerBase:ucBaseGrid Name="GridBankAcct" Grid.ColumnSpan="5" Grid.RowSpan="6" CntrlTabIndex="2" Margin="0,0,0,-22" />
                </Grid>
            </Border>
        <Border Grid.ColumnSpan="4"  Grid.Row="4" BorderBrush="Gray" BorderThickness="0,0,0,1" >
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140*" />
                    <ColumnDefinition Width="226*" />
                    <ColumnDefinition Width="226*" />
                    <ColumnDefinition Width="140*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <RazerBase:ucLabelComboBox Name="cmbNewBankID" LabelText="Bank:" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" LabelWidth="50" IsEnabled="True" PropertyChanged="cmbNewBankID_PropertyChanged"></RazerBase:ucLabelComboBox>
                <RazerBase:ucLabelTextBox Name="txtnewBankAcct" LabelText="Bank Account:" Grid.Column="2" Grid.Row="1" LabelWidth="90" Text="" IsEnabled="False"/>
            </Grid>
        </Border>

       
          
            <Border Grid.ColumnSpan="4" Grid.Row="5" BorderBrush="Gray" BorderThickness="0,0,0,1" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="30"/>
                    </Grid.RowDefinitions>
                    <Button Name="btnSave" Height="30" Width="150" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" IsEnabled="False" Click="btnSave_Click"  >Save Adjustment</Button>
                </Grid>
            </Border>
            <Border Grid.ColumnSpan="4" Grid.Row="7" BorderBrush="Gray" BorderThickness="0,0,0,1" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="30"/>
                    </Grid.RowDefinitions>
                </Grid>
            </Border>
        </Grid>
    
</RazerBase:ScreenBase>

