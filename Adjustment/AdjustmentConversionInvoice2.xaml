<RazerBase:ScreenBase x:Class="Adjustment.AdjustmentConversionInvoice2" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:RazerConverters="clr-namespace:RazerConverters;assembly=RazerConverters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1280"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="350"/>
            <ColumnDefinition MaxWidth="250"/>
            <ColumnDefinition MaxWidth="350"/>
            <ColumnDefinition MaxWidth="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="50"/>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition MinHeight="300"/>
            <RowDefinition MaxHeight="30"/>
            <RowDefinition MaxHeight="50"/>


        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="4" Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid DataContext="{Binding ElementName=GridAdjustment, Path=ActiveRecord}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="250"/>
                    <ColumnDefinition MinWidth="200"/>
                    <ColumnDefinition MinWidth="400"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="50"/>
                </Grid.RowDefinitions>
                <RazerBase:ucLabelTextBox Name="txtDocument" LabelText="Document to Adjust:" Grid.Column="0" Grid.Row="0" LabelWidth="125" LostFocus="txtDocument_LostFocus" EnterActsLikeTab="True" TabIndex="0" />
                <!--<RazerBase:ucLabelTextBox Name="txtAdjAmt" LabelText="Amount to Adjust:" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="1" LabelWidth="120" EnterActsLikeTab="True" Text="{Binding Path=Cells[amt_to_adjust].Value, Mode=OneTime}" IsEnabled="True" LostFocus="txtAdjAmt_LostFocus" GotFocus="txtAdjAmt_GotFocus" PreviewKeyDown="txtAdjAmt_PreviewKeyDown" CntrlTabIndex="1" />-->
                <RazerBase:ucLabelTextBox Name="txtAdjAmt" LabelText="Amount to Adjust:" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="1" LabelWidth="120" Text="0.00" EnterActsLikeTab="True" 
                                              IsEnabled="True" LostFocus="txtAdjAmt_LostFocus" GotFocus="txtAdjAmt_GotFocus" PreviewKeyDown="txtAdjAmt_PreviewKeyDown"
                                              BindPath="amt_adjusted" TabIndex="2"/>
                <RazerBase:ucLabelTextBox Name="txtRunningAdjAmt" LabelText="Adjusted Amt:" Grid.Column="2" Grid.Row="6" LabelWidth="90" MaxWidth="200" IsReadOnly="True"  IsEnabled="False" Text="0.00" />
            </Grid>
        </Border>
        <Border Grid.ColumnSpan="4" Grid.Row="1" BorderBrush="Gray" BorderThickness="0,0,0,1" MinHeight="44">
            <Grid DataContext="{Binding ElementName=GridAdjustment, Path=ActiveRecord}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="40"/>
                </Grid.RowDefinitions>
                <Label FontWeight="Bold" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center">Conversion Invoice to Adjust</Label>
                <RazerBase:ucLabelTextBox Name="txtInvAmt" LabelText="Inv Amt:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Text="{Binding Path=Cells[amount].Value, Mode=TwoWay, StringFormat={}{0:C}}" LabelWidth="70" IsReadOnly="True"  IsEnabled="False"/>
                <RazerBase:ucLabelTextBox Name="txtOpenAmt" LabelText="Open Amt:" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Text="{Binding Path=Cells[open_amount].Value, Mode=TwoWay, StringFormat={}{0:C}}" LabelWidth="70" IsReadOnly="True"  IsEnabled="False"/>

            </Grid>
        </Border>
        <Border Grid.ColumnSpan="4" Grid.Row="2" BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="150"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="250"/>
                </Grid.RowDefinitions>
                <RazerBase:ucBaseGrid Name="GridAdjustment" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" PreviewKeyDown="GridAdjustment_PreviewKeyDown" TabIndex="3"/>
            </Grid>
        </Border>
        <Border Grid.ColumnSpan="4" Grid.Row="7" BorderBrush="Gray" BorderThickness="0,0,0,1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="40"/>
                </Grid.RowDefinitions>
            </Grid>
        </Border>
        <Button Name="btnSave" Height="30" Width="150" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="2" IsEnabled="False" Click="btnSave_Click" TabIndex="9" >Save Adjustment</Button>
    </Grid>
</RazerBase:ScreenBase>
