<RazerBase:ScreenBase x:Class="Cash.CashDocSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"             
             xmlns:igDP="http://infragistics.com/DataPresenter"          
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Border Grid.Row="1" Grid.ColumnSpan="4" BorderBrush="Gray" BorderThickness="0,0,0,1" >
        <Grid Background="{DynamicResource ApplicationBackgroundDark}" Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Grid.ColumnSpan="4">
                <Grid.RowDefinitions>                    
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <RazerBase:ucLabelTextBox Name="txtAccountName" LabelText="Customer Name:" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" LabelWidth="125" />
                <RazerBase:ucLabelTextBox Name="txtReceivableAccount" LabelText="Customer ID:" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" LabelWidth="125" />
                <RazerBase:ucLabelDatePicker Name="ldpRemitFrom" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" LabelText="Remit Date From:" LabelWidth="120" />
                <RazerBase:ucLabelDatePicker Name="ldpRemitTo" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="3" LabelText="Remit Date To:" LabelWidth="120" />
                <RazerBase:ucLabelTextBox Name="txtRemitAmtFrom" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="0" LabelText="Remit Amount From:" LabelWidth="123" LostFocus="txtRemitAmtFrom_LostFocus" GotFocus="txtRemitAmtFrom_GotFocus" Text=""/>
                <RazerBase:ucLabelTextBox Name="txtRemitAmtTo" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="3" LabelText="Remit Amount To:" LabelWidth="120" LostFocus="txtRemitAmtTo_LostFocus" GotFocus="txtRemitAmtTo_GotFocus" Text="" />
                <RazerBase:ucLabelTextBox Name="txtRemitNumber" LabelText="Check Number:" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" LabelWidth="125" />
                
            </Grid>
            <Grid Grid.Row="2" Grid.ColumnSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>  
                <Button Name="btnSearch" Content="Search" Height="23" Width="100" Grid.Column="2" Margin="14,10,6,0" Click="btnSearch_Click" />
                <Button Name="btnClear" Content="Clear" Height="23" Width="100" Grid.Column="3" Margin="4,10,16,0" Click="btnClear_Click" />
            </Grid>
            <RazerBase:ucBaseGrid x:Name="idgCashDocSearch" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4"></RazerBase:ucBaseGrid>
        </Grid>
    </Border>
</RazerBase:ScreenBase>

