<local:ScreenBase x:Class="Cash.GeneralCashTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:igRibbon="http://infragistics.com/Ribbon"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="380" />
            <ColumnDefinition Width="380" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="37" />
            <RowDefinition Height="37" />
            <RowDefinition Height="37" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Place Controls Here -->
        <local:ucLabelComboBox HorizontalAlignment="Left"  Name="ltBank" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" Width="320" IsEnabled="True" LabelText="Bank:" SelectedValue="{Binding Path=bank_id, Mode=TwoWay}" PropertyChanged="ltBank_PropertyChanged" />
        <local:ucLabelTextBox  HorizontalAlignment="Left" Name="ltTotal" VerticalAlignment="Top" Grid.Column="2" Width="340" IsEnabled="True" LabelText="Batch Total:" Grid.Row="1" BindPath="batch_total" LostFocus="ltTotal_LostFocus" />
        <local:ucLabelDatePicker HorizontalAlignment="Left" Name="ltAcctPeriod" VerticalAlignment="Top" Grid.Column="2" Grid.Row="2" IsEnabled="False" Width="340" LabelText="Acct Period:" BindPath="acct_period" />
        <local:ucLabelCheckBox Grid.Column="1" HorizontalAlignment="Left" Name="lcbPosted" VerticalAlignment="Top"  Grid.Row="3" LabelText="Posted:" BindPath="batch_status" IsEnabled="False"/>
        <local:ucLabelDatePicker BindPath="batch_date" Grid.ColumnSpan="2" HorizontalAlignment="Left" IsEnabled="True" LabelText="Batch Date:" Name="ucLabelDatePicker1" VerticalAlignment="Top" Width="340" Grid.Column="1" Grid.Row="2" />
    </Grid>
</local:ScreenBase>
