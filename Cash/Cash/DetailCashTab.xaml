<local:ScreenBase x:Class="Cash.DetailCashTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid  FocusManager.IsFocusScope="True"  Name="CashGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="150" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Place Controls Here -->
       <local:ucBaseGrid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Left" Name="gRemit" VerticalAlignment="Top" Width="800" />
        <local:ucBaseGrid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" HorizontalAlignment="Left" Name="gAllocation" VerticalAlignment="Top"  Width="800" />
        <Label Content="Cash Allocation" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3"  Height="28" HorizontalAlignment="Center"  Name="label1" VerticalAlignment="Center" Style="{DynamicResource LabelLightUpStyle}" />
        <Label Content="Cash Remittance" Grid.ColumnSpan="2" Height="28" Grid.Column="1" HorizontalAlignment="Center" Name="label2" Style="{DynamicResource LabelLightUpStyle}" VerticalAlignment="Center" />
    </Grid>
</local:ScreenBase>
