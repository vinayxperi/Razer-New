<local:ScreenBase x:Class="Cash.CashEntryTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
              d:DesignHeight="720" d:DesignWidth="1080"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="630*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="37" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <local:ucLabelComboBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" LabelText="Source:"  Name="ltbSourceID" VerticalAlignment="Top" Width="314" />
        <local:ucLabelTextBox Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left" LabelText="Batch Total:"  Name="ltbBatchTotal" VerticalAlignment="Top" Width="320"/>
        <local:ucLabelDatePicker Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left"  Name="ltbBatchDate" LabelText="Batch Date:" VerticalAlignment="Top" Width="314" Height="40" />
        <local:ucLabelTextBox Grid.Column="3" Grid.Row="2" HorizontalAlignment="Left"  Name="ltbRemitTotal" LabelText="Remit Total:" VerticalAlignment="Top" Width="320" IsEnabled="False" />
        <local:ucLabelComboBox Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Name="ltbCompanyCode" LabelText="Company:" VerticalAlignment="Top" Width="314"  />
        <local:ucLabelTextBox Grid.Column="3" Grid.Row="3" HorizontalAlignment="Left"  Name="ltbAllocatedTotal" LabelText="Allocated:" VerticalAlignment="Top" Width="320" IsEnabled="False" />
        <local:ucLabelComboBox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left"  Name="lktbBankID" LabelText="Bank:" VerticalAlignment="Top" Width="314" SelectedValue="{Binding Path=bank_id, Mode=TwoWay}"  />
        <local:ucBaseGrid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="6" HorizontalAlignment="Left" Name="gRemittance" VerticalAlignment="Top" Width="800" />
           <Label Content="Remittance" Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="5"  Height="28" HorizontalAlignment="Center" Name="label1" VerticalAlignment="Center" />
        <Label Content="Allocation" Style="{DynamicResource LabelLightUpStyle}" Grid.Column="3" Grid.Row="5" Height="28" HorizontalAlignment="Center"  Name="label2" VerticalAlignment="Center" Margin="167,1,397,1" />
        <local:ucLabelTextBox Grid.Column="1" HorizontalAlignment="Left" Name="ucCashID" VerticalAlignment="Top" Grid.Row="0" LabelText="Check ID:" Width="314" IsEnabled="False" />
    </Grid>
</local:ScreenBase>
