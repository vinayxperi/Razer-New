<RazerBase:ScreenBase x:Class="Cash.CashMainScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:igWindows="http://infragistics.com/Windows"
             xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        
        <RazerBase:ucLabelTextBox x:Name="tBatchID" Grid.Row="1" Grid.Column="1" LabelWidth="100" LabelText="Batch ID:" EnterActsLikeTab="True" 
                                  LostFocus="tBatchID_LostFocus" MouseDoubleClick="tBatchID_MouseDoubleClick" ></RazerBase:ucLabelTextBox>
        <RazerBase:ucLabelComboBox  Grid.Column="1" Grid.Row="2"  LabelText="Source:"  Name="cbSource"  SelectedValue="{Binding Path=source_id, Mode=TwoWay}" LabelWidth="100"></RazerBase:ucLabelComboBox>
        <RazerBase:ucLabelDatePicker Grid.Column="1" Grid.Row="3" Name="dpBatchDate" LabelText="Batch Date:" BindPath="batch_date" LabelWidth="100" />
        <RazerBase:ucLabelComboBox  Grid.Column="1" Grid.Row="4"  LabelText="Bank:"  Name="cbBank"  SelectedValue="{Binding Path=bank_id, Mode=TwoWay}" LabelWidth="100"
                                    SelectionChanged="cbBank_SelectionChanged" ></RazerBase:ucLabelComboBox>
        <RazerBase:ucLabelTextBox x:Name="tBatchTotal" Grid.Row="1" Grid.Column="3" LabelText="Batch Total:" LabelWidth="100" 
                                  Text ="{Binding Path=batch_total,Mode=TwoWay,Converter={StaticResource TextNumericConverter}}" 
                                   ></RazerBase:ucLabelTextBox>
        <RazerBase:ucLabelTextBox x:Name="tRemitTotal" Grid.Row="2" Grid.Column="3" LabelText="Remit Total:" LabelWidth="100" IsReadOnly="True" 
                                   Text ="{Binding Path=total_remit,Mode=TwoWay,Converter={StaticResource TextNumericConverter}}" IsTabStop="False"  ></RazerBase:ucLabelTextBox>
<RazerBase:ucLabelTextBox x:Name="tRemitLineTotal" Grid.Row="3" Grid.Column="3" LabelText="Remit Line Total:" LabelWidth="100" IsReadOnly="True" 
                                   Text ="{Binding Path=remit_line_total,Mode=TwoWay,Converter={StaticResource TextNumericConverter}}" IsTabStop="False" ></RazerBase:ucLabelTextBox>
        <RazerBase:ucLabelTextBox x:Name="tAllocTotal" Grid.Row="4" Grid.Column="3" LabelText="Allocation Total:" LabelWidth="100" IsReadOnly="True" 
                                   Text ="{Binding Path=total_allocated,Mode=TwoWay,Converter={StaticResource TextNumericConverter}}" IsTabStop="False" ></RazerBase:ucLabelTextBox>
        <RazerBase:ucLabelCheckBox x:Name="chkPosted" Grid.Column="5" Grid.Row="1" LabelWidth="100" LabelText="Posted" IsEnabled="False" 
                                   IsTabStop="False" BindPath="batch_status" ></RazerBase:ucLabelCheckBox>
        <RazerBase:ucLabelTextBox x:Name="tCurrencyCode" Grid.Row="2" Grid.Column="5" LabelText="Currency:" LabelWidth="100" IsReadOnly="True" 
                                  BindPath="currency_code" IsTabStop="False" ></RazerBase:ucLabelTextBox>
        <RazerBase:ucLabelDatePicker Grid.Column="5" Grid.Row="3" Name="dpAcctPeriod" LabelText="Acct Period:" BindPath="acct_period" LabelWidth="100" IsReadOnly="True" 
                                     IsTabStop="False"/>


        <!--Second grid will contain the two ucBaseGrid objects so that they can be sized seperately from the top part of the window-->
        <Grid Grid.Column="0" Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="7">
            <Grid.RowDefinitions>
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Row="1" Grid.Column="1">Remittance</Label>
            <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Row="1" Grid.Column="3">Allocation</Label>
            <RazerBase:ucBaseGrid Name="gRemit" Grid.Row="2" Grid.Column="1"></RazerBase:ucBaseGrid>
            <RazerBase:ucBaseGrid Name="gAlloc" Grid.Row="2" Grid.Column="3"></RazerBase:ucBaseGrid>
        </Grid>
    </Grid>
    
 
    
</RazerBase:ScreenBase>
