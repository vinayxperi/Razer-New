<local:ScreenBase x:Class="Razer.BatchBilling.BillingBatchRptingTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="720"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="1" >Unposted for Reporting</Label>
        <local:ucBaseGrid Name="gBillingBatchRpting" Grid.ColumnSpan="2"   Grid.Column="1" Grid.Row="2" ></local:ucBaseGrid>
        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="3" >Unposted Detail for Reporting</Label>
        <local:ucBaseGrid Name="gBillingBatchDtlRpting" Grid.ColumnSpan="2"   Grid.Column="1" Grid.Row="4" ></local:ucBaseGrid>
        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="5" >Unposted Account Detail for Reporting</Label>
        <local:ucBaseGrid Name="gBillingBatchAcctRpting" Grid.ColumnSpan="2"   Grid.Column="1" Grid.Row="6" ></local:ucBaseGrid>
    </Grid>
</local:ScreenBase>
