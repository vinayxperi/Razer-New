<local:ScreenBase x:Class="Invoice.InvoiceAcctRuleTierDetail" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1080"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10" />
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
                <!--<RowDefinition Height="25" />-->
                <RowDefinition Height="10" />
            </Grid.RowDefinitions>
            <!-- Place Controls Here -->
            <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="1" >Invoice Rule Detail</Label>
          
                <local:ucBaseGrid Name="gInvoiceRuleDetail" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" ></local:ucBaseGrid>
           
            <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="3" >Invoice Accounting Detail</Label>
          
            <local:ucBaseGrid Name="gInvoiceAcctDetail" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" ></local:ucBaseGrid>
          
            <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="5">Invoice Tier Detail</Label>
          
            <local:ucBaseGrid Name="gInvoiceTierDetail" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="3" ></local:ucBaseGrid>
    

    </Grid>

</local:ScreenBase>

