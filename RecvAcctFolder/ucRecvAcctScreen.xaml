<RazerBase:ScreenBase x:Class="RecvAcctFolder.ucRecvAcctScreen"
             MainTableName="RecvAcct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecvAcctFolder"
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:igWindows="http://infragistics.com/Windows"
             xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <Grid Background="{DynamicResource ApplicationBackgroundDark}" Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MaxHeight="40" MinHeight="40"/>
            <RowDefinition Height="5*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Style="{DynamicResource LabelLightUpStyle}">Receivable Account</Label>
        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="2">Account Name</Label>
        <TextBox Name="tRecvAcct" Style="{DynamicResource RoundedText}" Grid.Column="1" MouseDoubleClick="RecvAcct_DoubleClick"></TextBox>
        <TextBox Name="tAcctName" Style="{DynamicResource RoundedText}" Grid.Column="3" MouseDoubleClick="RecvAcct_DoubleClick"></TextBox>
        <igWindows:XamTabControl Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="4" Background="{DynamicResource ApplicationBackground}" Name="tcMainTab">
            <igWindows:TabItemEx Header="General" Background="{DynamicResource DataGradient}" FontWeight="Bold">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <local:ucRecvAcctGeneralTab Grid.RowSpan="2" Grid.ColumnSpan="2" x:Name="uGeneral" ScreenBaseParentObjName="ucRecvAcctScreen"></local:ucRecvAcctGeneralTab>
                </Grid>
            </igWindows:TabItemEx>
            <igWindows:TabItemEx Header="System" Background="{DynamicResource DataGradient}" FontWeight="Bold">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <local:ucSystem Grid.RowSpan="2" Grid.ColumnSpan="2" x:Name="uSystem" ScreenBaseParentObjName="ucRecvAcctScreen"></local:ucSystem>
                </Grid>
            </igWindows:TabItemEx>
            <igWindows:TabItemEx Header="Acct History" Background="{DynamicResource DataGradient}" FontWeight="Bold">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <local:ucRecvAcctHistoryTab Grid.RowSpan="2" Grid.ColumnSpan="2" x:Name="uHistory" ScreenBaseParentObjName="ucRecvAcctScreen"></local:ucRecvAcctHistoryTab>
                </Grid>
            </igWindows:TabItemEx>
            <igWindows:TabItemEx Header="Aging" Background="{DynamicResource DataGradient}" FontWeight="Bold">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <local:ucRecvAcctAgingTab Grid.RowSpan="2" Grid.ColumnSpan="2" x:Name="uAging" ScreenBaseParentObjName="ucRecvAcctScreen"></local:ucRecvAcctAgingTab>
                </Grid>
            </igWindows:TabItemEx>
            <igWindows:TabItemEx Header="Contact" Background="{DynamicResource DataGradient}" FontWeight="Bold">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                </Grid>
            </igWindows:TabItemEx>
            <igWindows:TabItemEx Header="Comments" Background="{DynamicResource DataGradient}"/>
        </igWindows:XamTabControl>
    </Grid>
</RazerBase:ScreenBase>
