<local:DialogBase x:Class="RecvAcctFolder.ucRecvAcctLookup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:igDP="http://infragistics.com/DataPresenter" 
        xmlns:igWindows="http://infragistics.com/Windows" 
        xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
        Height="500" Width="700"
        Background="{StaticResource ApplicationBackground}" Loaded="DialogBase_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MaxHeight="35"/>

            <RowDefinition Height="1*" MaxHeight="35"/>
            <RowDefinition Height="1*" MaxHeight="35"/>
            <RowDefinition Height="1*" MaxHeight="35"/>
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Label Style="{StaticResource LabelLightUpStyle}" >Receivable Account</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Column="2">Account Name</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1">Address</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="1" Grid.Column="2">Account Description</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2" Grid.Column="0">City</Label>
        <Label Style="{StaticResource LabelLightUpStyle}" Grid.Row="2" Grid.Column="2">State</Label>
        <CheckBox Name="chkInactive" Grid.Row="3" Style="{DynamicResource CheckBoxStyle}" HorizontalAlignment="Left" >Show Inactives</CheckBox>
        <TextBox Style="{StaticResource RoundedText}" Grid.Column="1" Name="tReceivableAcct" TextChanged="FilterKeyPress"></TextBox>
        <TextBox Style="{StaticResource RoundedText}" Grid.Column="3" Name="tAcctName" TextChanged="FilterKeyPress"></TextBox>
        <TextBox Style="{StaticResource RoundedText}" Grid.Column="1" Grid.Row="1" Name="tAddress1" TextChanged="FilterKeyPress"></TextBox>
        <TextBox Style="{StaticResource RoundedText}" Grid.Column="3" Grid.Row="1" Name="tAcctDescription" TextChanged="FilterKeyPress"></TextBox>
        <TextBox Style="{StaticResource RoundedText}" Grid.Column="1" Grid.Row="2" Name="tCity" TextChanged="FilterKeyPress"></TextBox>
        <TextBox Style="{StaticResource RoundedText}" Grid.Column="3" Grid.Row="2" Name="tState" TextChanged="FilterKeyPress"></TextBox>
        <local:ucBaseLookup x:Name="uBaseLookup" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" ></local:ucBaseLookup>
    </Grid>
</local:DialogBase>
