<local:ScreenBase x:Class="Contract.ContractOpsTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             xmlns:converters="clr-namespace:RazerConverters;assembly=RazerConverters"
                  xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1080"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <!--Resource area below added to allow for row color coding based on if the attachment is ediatble or not-->
    <UserControl.Resources>
        <!--The resource is needed to support the color coding of the rows in the grid-->
        <Style TargetType="{x:Type igDP:DataRecordPresenter}">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="{Binding Path=Cells[color_status].Value, Converter={StaticResource AttachmentHighlightConverter}}" />
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>


    <Grid x:Name="mainGrid" Width="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition  Width="150"/>
            <ColumnDefinition  Width="260"/>
            <ColumnDefinition  Width="260"/>
            <ColumnDefinition  Width="150"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition  Width="150"/>
            <ColumnDefinition  Width="20"/>
     
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
           <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <!-- Place Controls Here -->
        <local:ucColorKey Name="OpsColorKey" RedLabel="In Process" RedVisible="True" GreenVisible="False" YellowVisible="False" TealVisible="False" Grid.Row="1" Grid.Column="1" />
        <local:ucBaseGrid Name="gOps" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="6" ></local:ucBaseGrid>
        <Button Name="btnPrebill" Height="23" Width="110" Grid.Column="6" Grid.Row="1" Click="RunPrebill">Run Prebill</Button>
        <Button  Name="btnRetrieve" Grid.Column="4"  Grid.Row="1" Click="btnRetrieve_Click" Width="110" Height="23"  HorizontalAlignment="Left" >Retrieve</Button>
        <local:ucLabelDatePicker Name="txtServiceDateStart" Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="1" LabelText="Service Period Start:"  LabelWidth="120" FontWeight="Bold" IsTabStop="True" />
        <local:ucLabelDatePicker Name="txtServiceDateEnd" Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="1" LabelText="Service Period End:" LabelWidth="120" FontWeight="Normal" IsTabStop="True" />

    </Grid>

</local:ScreenBase>
