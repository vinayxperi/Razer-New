<local:ScreenBase x:Class="Contract.ContractReportingTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="25" />
            <RowDefinition Height="150" />
            <RowDefinition Height="25" />
            <RowDefinition Height="200" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Place Controls Here -->
        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="1" >Required Reporting</Label>
        <local:ucBaseGrid Name="gReports" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" ></local:ucBaseGrid>
        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="3" >Report Details</Label>
        <local:ucBaseGrid Name="gReportDetails" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" ></local:ucBaseGrid>
        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="5">Reminder History</Label>
        <local:ucBaseGrid Name="gReportReminderHistory" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="1" Grid.RowSpan="2"></local:ucBaseGrid>
        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="2" Grid.Row="5">Report Distribution</Label>
        <local:ucBaseGrid Name="gReportDistribution" Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="1" Grid.RowSpan="2"></local:ucBaseGrid>
        <!--<Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="2" Margin="10,0,0,0" Grid.Row="5">Report Attachments</Label>
        <local:ucBaseGrid Name="gReportAttachments" Grid.Column="2" Margin="10,0,0,0" Grid.Row="6" Grid.ColumnSpan="1" Grid.RowSpan="2"></local:ucBaseGrid>
        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="3" Margin="10,0,0,0" Grid.Row="5">Reminder Distribution List</Label>
        <local:ucBaseGrid Name="gReportReminderContact" Grid.Column="3" Margin="10,0,0,0" Grid.Row="6" Grid.ColumnSpan="1" Grid.RowSpan="2"></local:ucBaseGrid>
   --> </Grid>
    </ScrollViewer>
</local:ScreenBase>
