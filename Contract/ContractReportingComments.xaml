<local:ScreenBase x:Class="Contract.ContractReportingComments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
 
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="2*"/>
                <RowDefinition Height="30" />
                <RowDefinition Height="2*"/>
                <!--<RowDefinition />
                <RowDefinition />
                <RowDefinition />-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
                <Grid DataContext="{Binding ElementName=RGridComments, Path=ActiveRecord}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0">Report Comments</Label>
                </Grid>
            </Border>
            <Border  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <local:ucBaseGrid x:Name="RGridComments" Grid.Row="1"  Grid.RowSpan="1" Grid.ColumnSpan="2" Loaded="GridComments_Loaded" ></local:ucBaseGrid>
                </Grid>
            </Border>
            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0">Comment Text</Label>
                </Grid>
            </Border>
        <Button Name="btnSave" Grid.Column="2" Grid.Row="0" Content="Save" MaxHeight="30" MaxWidth="110" Click="btnSave_Click" />
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
                <Grid DataContext="{Binding ElementName=RGridComments, Path=ActiveRecord, Mode=TwoWay}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                <TextBox x:Name="txtRCommentText" Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" Text="{Binding Path=Cells[comment_text].Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                         VerticalAlignment="Top" MaxHeight="Infinity"  AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="Auto" MinHeight="120" />
                </Grid>
            </Border>
            <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0">Report Comment Attachments</Label>
                </Grid>
            </Border>
            <Border  Grid.Row="5" Grid.ColumnSpan="3" Grid.RowSpan="1"  BorderBrush="Gray" Background="Transparent"  BorderThickness="1">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="800"/>
                    </Grid.RowDefinitions>
                    <local:ucAttachmentsTab x:Name="uRCommentAttachments"  Grid.Row="0"  Grid.RowSpan="1" Grid.ColumnSpan="1" MinHeight="60"></local:ucAttachmentsTab>
                </Grid>
            </Border>
        </Grid>
    
</local:ScreenBase>
    