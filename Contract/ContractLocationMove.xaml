            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition MinHeight="70" MaxHeight="70"/>
            <RowDefinition  MaxHeight="80"/>
            <RowDefinition  MaxHeight="10"/>
            <!--<RowDefinition  MaxHeight="40"/>-->
            <RowDefinition Height="5*" MaxHeight="35"/>
            <RowDefinition />
          
        </Grid.RowDefinitions>
