        <!--<TextBox  Grid.Column="1" Name="txtLocationID"></TextBox>
        <TextBox  Grid.Column="3" Name="txtLocationName"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="1" Name="txtOwnerMSO"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="1" Name="txtEntityCode"></TextBox>
        <TextBox  Grid.Column="3" Grid.Row="1" Name="txtPSACity"></TextBox>
        <TextBox  Grid.Column="5" Grid.Row="1" Name="txtPSAState"></TextBox>
        <TextBox  Grid.Column="1" Grid.Row="2" Name="txtEntityName"></TextBox>
        <CheckBox Name="chkInactive" Grid.Row="2" Grid.Column ="3" >Show Inactives</CheckBox>
        <RazerBase:ucLabelCheckBox Name="chkEnableTemplate" Grid.Row="2" Grid.Column="5" LabelText="Enable Template:" LabelWidth="100" />-->

        <Border Name="TemplateBorder" Grid.ColumnSpan="6" Grid.Row="1" Grid.RowSpan="2"  BorderBrush="Gray" BorderThickness="0,0,0,1" >
            <Grid MaxHeight="250">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120*" />
                    <ColumnDefinition Width="120*" />
                    <ColumnDefinition Width="120*" />
                    <ColumnDefinition Width="200*" />
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="120*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <RazerBase:ucLabelTextBox Name="txtFromContractID" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" LabelText="From Contract ID:" LabelWidth="120" BindPath="from_contract_id" IsReadOnly="True" />
                <RazerBase:ucLabelTextBox Name="txtToContractID" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" LabelText="To Contract ID:" LabelWidth="120" MouseDoubleClick="txtToContractID_MouseDoubleClick" LostFocus="txtToContractID_LostFocus" BindPath="to_contract_id" />
                <RazerBase:ucLabelDatePicker Name="dtFromEndDate" Grid.Column="2" Grid.ColumnSpan="3" LabelText="Set From End Date:" LabelWidth="150" Margin="0,0,40,0" BindPath="from_end_date" LostFocus="dtFromEndDate_LostFocus" EnterActsLikeTab="True"  />
                <RazerBase:ucLabelDatePicker Name="dtContractBillStartDate" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" LabelText="To Contract Start Date:" LabelWidth="150" Margin="0,0,40,0" BindPath="to_start_date" />

                <!--<RazerBase:ucLabelCheckBox Name="chkCopyFromComment" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" LabelText="Copy From Comment to New Contract:" LabelWidth="240"  BindPath="move_comment_ind"  />-->
                <RazerBase:ucLabelTextBox Name="txtSetFromComment" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6" LabelText="New Comment for From:" LabelWidth="150" BindPath="from_new_comment"/>
            </Grid>
        </Border>
        <Label Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" FontStyle="Italic">Select Location(s) to Move to New Contract</Label>
        <Button Name="btnMove" Grid.Column="5" Grid.Row="4" Content="Move Locations" MaxHeight="30" Click="btnMove_Click" />
        <RazerBase:ucBaseGrid x:Name="GridLocationsAvailToMove" Grid.Row="6" Grid.ColumnSpan="6" ></RazerBase:ucBaseGrid>
       
    </Grid>
