<local:ScreenBase x:Class="Contract.ContractRatesTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
                  xmlns:igDP="http://infragistics.com/DataPresenter" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    
    <!--Resource area below added to allow for row color coding based on if the attachment is ediatble or not-->
    <UserControl.Resources>
        <!--The resource is needed to support the color coding of the rows in the grid-->
        <Style TargetType="{x:Type igDP:DataRecordPresenter}">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="{Binding Path=Cells[color_status].Value, Converter={StaticResource AttachmentHighlightConverter}}" />
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10" />
                <RowDefinition Height="25" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="25" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="25" />
                <RowDefinition Height="3*" />
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
            <!-- Place Controls Here -->
            <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="1" >Rates</Label>
        <!--<local:ucLabelCheckBox Name="txtShowInactiveFlag" Grid.Column="3" Grid.Row="1" LabelText="Show Inactive" LabelWidth="120" Checked="txtShowInactiveFlag_Checked" UnChecked="txtShowInactiveFlag_Checked" />-->
        <CheckBox Name="chkInactive" Grid.Column="2" Grid.Row="1" Style="{DynamicResource CheckBoxStyle}" HorizontalAlignment="Left" Click="chkBox_Click"  >Show InActives</CheckBox>
        <local:ucColorKey Name="OpsColorKey" RedLabel="InActive" RedVisible="True" GreenVisible="False" YellowVisible="False" TealVisible="False" Grid.Row="1" Grid.Column="3" VerticalAlignment="Top" />
        <local:ucBaseGrid Name="gRates" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" ></local:ucBaseGrid>
        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="3" >Rules</Label>
            <local:ucBaseGrid x:Name="gRules" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="5" ></local:ucBaseGrid>
            <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="5">Rule Detail</Label>
            <local:ucBaseGrid Name="gRuleDetail" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="4" ></local:ucBaseGrid>
        </Grid>
    <!--</ScrollViewer>-->

</local:ScreenBase>
