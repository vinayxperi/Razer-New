<RazerBase:ScreenBase x:Class="Contract.ContractRatesCopy" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="850"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="142*" />
            <ColumnDefinition Width="142*" />
            <ColumnDefinition Width="36*" />
            <ColumnDefinition Width="106*" />
            <ColumnDefinition Width="142*" />
            <ColumnDefinition Width="105*" />
            <ColumnDefinition Width="37*" />
            <ColumnDefinition Width="138*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="30"/>
            <RowDefinition  MaxHeight="110" Height="90*" />
            <RowDefinition Height="90*" />
            <RowDefinition  MaxHeight="10" Height="10*" />
            <!--<RowDefinition  MaxHeight="40"/>-->
            <RowDefinition Height="40*" MaxHeight="40"/>
            <RowDefinition Height="750*" />
          
        </Grid.RowDefinitions>
       

       

        <Border Name="TemplateBorder" Grid.ColumnSpan="9" Grid.Row="1" Grid.RowSpan="3"  BorderBrush="Gray" BorderThickness="0,0,0,1" >
            <Grid MaxHeight="250">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="148*" />
                    <ColumnDefinition Width="148*" />
                    <ColumnDefinition Width="148*" />
                    <ColumnDefinition Width="246*" />
                    <ColumnDefinition Width="12*" />
                    <ColumnDefinition Width="143*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35*" />
                    <RowDefinition Height="35*" />
                    <RowDefinition Height="35*" />
                    <RowDefinition Height="18*" />
                    <RowDefinition Height="17*" />
                </Grid.RowDefinitions>
              
            </Grid>
        </Border>
        <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" FontStyle="Italic">Select a Rate to Copy</Label>
        <RazerBase:ucBaseGrid x:Name="GridRatesToCopy" Grid.Row="2" Grid.ColumnSpan="9" Grid.RowSpan="2"></RazerBase:ucBaseGrid>
        <Label Grid.Row="5" Grid.ColumnSpan="2" FontStyle="Italic">Select Rules(s) Associated with Rate to Copy</Label>
        <RazerBase:ucLabelCheckBox Name="chkCopyAllRules" Foreground="Red" LabelText="Copy all Rules:  " Grid.Row ="5" Grid.Column="5" LabelWidth="110" Checked="chkCopyAllRules_Checked" UnChecked="chkCopyAllRules_UnChecked" Grid.ColumnSpan="2" />
        <Button Name="btnCopy" Grid.Column="7" Grid.Row="5" Content="Copy Rate/Rule(s)" MaxHeight="30" Click="btnCopy_Click" Grid.ColumnSpan="2" Margin="0,2" />
        <RazerBase:ucBaseGrid x:Name="GridRulesToCopy" Grid.Row="8" Grid.ColumnSpan="9" ></RazerBase:ucBaseGrid>
       
    </Grid>
</RazerBase:ScreenBase>
