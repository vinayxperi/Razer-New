<RazerBase:ScreenBase x:Class="Contract.ContractUnitsTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="1080"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">-->
        <Grid>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="280" />
                    <ColumnDefinition Width="280" />
                    <ColumnDefinition Width="280" />
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!-- Place Controls Here -->
                <Button  Name="bRetrieve" Grid.Column="3"  Grid.Row="0" Click="bRetrieve_Click" Width="110" Height="23"  HorizontalAlignment="Left" >Retrieve</Button>
                <RazerBase:ucLabelDatePicker Name="txtServiceDateStart" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="0" LabelText="Service Period Start:"  LabelWidth="120" FontWeight="Bold" IsTabStop="True" />
                <RazerBase:ucLabelDatePicker Name="txtServiceDateEnd" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="1" LabelText="Service Period End:" LabelWidth="120" FontWeight="Normal" IsTabStop="True" />
                <RazerBase:ucLabelTextBox Name="txtUnitTotal" Grid.Row="0" Grid.Column="4" LabelText="Total Units:" LabelWidth="80" MinWidth="160" HorizontalAlignment="Left" VerticalAlignment="Top"
                                  Text ="{Binding Path=unit_total,Mode=TwoWay,StringFormat=N}" IsEnabled="False"/>
            </Grid>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
      
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="5" />
                </Grid.RowDefinitions>
                <RazerBase:ucBaseGrid Name="GridContractUnits" Grid.Row="2" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3"></RazerBase:ucBaseGrid>
            </Grid>
        </Grid>
    <!--</ScrollViewer>-->
</RazerBase:ScreenBase>
