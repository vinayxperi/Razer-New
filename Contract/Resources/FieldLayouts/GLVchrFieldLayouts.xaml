
    <ResourceDictionary  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    
                    xmlns:igWindows="http://infragistics.com/Windows"
                    xmlns:igDP="http://infragistics.com/DataPresenter"
                    xmlns:igEditors="http://infragistics.com/Editors" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:RazerConverters="clr-namespace:RazerConverters;assembly=RazerConverters">



    <igDP:FieldLayout x:Key="GLVchrGeneralDetail" x:Shared="False">
        <igDP:Field Name="sequence_id" Label="Seq ID" Width="70"></igDP:Field>
        <igDP:Field Name="account_code" Label="Account Code" Width="150"></igDP:Field>
        <igDP:Field Name="debit" Label="Debits" Width="110">
            <igDP:Field.Settings>
                <igDP:FieldSettings 
                       EditAsType="{x:Type sys:Double}">
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamNumericEditor}" >
                            <Setter Property="Format" Value="###,###,###.00;###,###,###.00" />
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="credit" Label="Credits" Width="110">
            <igDP:Field.Settings>
                <igDP:FieldSettings 
                       EditAsType="{x:Type sys:Double}">
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamNumericEditor}" >
                            <Setter Property="Format" Value="###,###,###.00;###,###,###.00" />
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="description" Label="Description" Width="300"></igDP:Field>
        <igDP:Field Name="journal_ctrl_num" Label="Journal Ctrl Num" Width="90" Visibility="Collapsed"></igDP:Field>
    </igDP:FieldLayout>

    <igDP:FieldLayout x:Key="GLVchrDetail" x:Shared="False">
        <igDP:Field Name="service_period" Label="Service Period" Width="100"></igDP:Field>
        <igDP:Field Name="account_code" Label="Account Code" Width="150"></igDP:Field>
        <igDP:Field Name="debit" Label="Debits" Width="110">
            <igDP:Field.Settings>
                <igDP:FieldSettings 
                       EditAsType="{x:Type sys:Double}">
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamNumericEditor}" >
                            <Setter Property="Format" Value="###,###,###.00;###,###,###.00" />
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="credit" Label="Credits" Width="110">
            <igDP:Field.Settings>
                <igDP:FieldSettings 
                       EditAsType="{x:Type sys:Double}">
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamNumericEditor}" >
                            <Setter Property="Format" Value="###,###,###.00;###,###,###.00" />
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="customer_name" Label="Customer Name" Width="130"></igDP:Field>
            <igDP:Field Name="detail_acct_id" Label="Detail Acct Id" Width="70" Visibility="Collapsed"></igDP:Field>
            <igDP:Field Name="detail_id" Label="Detail Id" Width="90" Visibility="Collapsed"></igDP:Field>
            <igDP:Field Name="journal_ctrl_num" Label="Journal Ctrl Num" Width="90" Visibility="Collapsed"></igDP:Field>
            <igDP:Field Name="recv_doc" Label="Document ID" Width="130"></igDP:Field>
            <igDP:Field Name="recv_doc_line" Label="Document Line ID" Width="130" Visibility="Collapsed"></igDP:Field>
            <igDP:Field Name="revenue_description" Label="Revenue Description" Visibility="Collapsed" Width="180"></igDP:Field>
            <igDP:Field Name="revenue_status" Label="Revenue Status" Visibility="Collapsed" Width="120"></igDP:Field>
            <igDP:Field Name="sales_order_number" Label="Sales Order Number" Visibility="Collapsed" Width="130"></igDP:Field>
            <igDP:Field Name="salesperson_name" Label="Salesperson Name" Width="150"></igDP:Field>
            <igDP:Field Name="sequence_id" Label="Sequence Id" Width="70" Visibility="Collapsed"></igDP:Field>
           
        </igDP:FieldLayout>

    <igDP:FieldLayout x:Key="glVchrLookup" x:Shared="False">
        <igDP:Field Name="acct_period" Label="Acct Period" Width="100"></igDP:Field>
        <igDP:Field Name="control_group" Label="Control Group" Width="150"></igDP:Field>
        <igDP:Field Name="journal_ctrl_num" Label="Journal Control Number" Width="160"></igDP:Field>
        <igDP:Field Name="description" Label="Description" Width="200"></igDP:Field>
        <igDP:Field Name="date_posted" Label="Date Posted" Width="100"></igDP:Field>
        <igDP:Field Name="ic_flag" Label="InterCompany" Width="70">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False" EditorType="{x:Type igEditors:XamCheckEditor}"/>
            </igDP:Field.Settings>
        </igDP:Field>
    
    </igDP:FieldLayout>

    <igDP:FieldLayout x:Key="DefPoolSmry" x:Shared="False">
        <igDP:Field Name="pool_id" Label="Pool ID" Width="90" Visibility="Collapsed"></igDP:Field>
        <igDP:Field Name="recv_doc" Label="Document ID" Width="90"></igDP:Field>
        <igDP:Field Name="product_code" Label="Product Code" Width="110"></igDP:Field>
        <igDP:Field Name="amount_deferred" Label="Amount Deferred" Width="120">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False">
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamNumericEditor}" >
                            <Setter Property="Format" Value="$###,##0.00;($###,##0.00)"  />
                            <Setter Property="Foreground" Value="{Binding Path=Cells[amount_deferred].Value, Converter={StaticResource NegativeToRedConverter}}"/>
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="amount_total" Label="Amount Total" Width="110">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False">
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamNumericEditor}" >
                            <Setter Property="Format" Value="$###,##0.00;($###,##0.00)"  />
                            <Setter Property="Foreground" Value="{Binding Path=Cells[amount_total].Value, Converter={StaticResource NegativeToRedConverter}}"/>
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="currency_code" Label="Currency Code" Width="90"></igDP:Field>
        <igDP:Field Name="receivable_account" Label="Customer ID"   Width="110"></igDP:Field>
        <igDP:Field Name="account_name"   Label="Customer" Width="130"></igDP:Field>
        <igDP:Field Name="account_code" Label="Revenue Account" Width="140"></igDP:Field>
        <igDP:Field Name="pool_detail_id" Label="Detail Id" Width="90" Visibility="Collapsed"></igDP:Field>

    </igDP:FieldLayout>

    <igDP:FieldLayout x:Key="DefPoolDetail" x:Shared="False">
        <igDP:Field Name="reason_desc" Label="Reason " Width="140"></igDP:Field>
        <igDP:Field Name="recog_period" Label="Recog Period" Width="100"></igDP:Field>
        <igDP:Field Name="amt_deferred" Label="Amount Deferred" Width="120">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False">
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamNumericEditor}" >
                            <Setter Property="Format" Value="$###,##0.00;($###,##0.00)"  />
                            <Setter Property="Foreground" Value="{Binding Path=Cells[amt_deferred].Value, Converter={StaticResource NegativeToRedConverter}}"/>
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="pool_detail_id" Label="Detail Id" Width="90" Visibility="Collapsed"></igDP:Field>
        <igDP:Field Name="pool_id" Label="Pool Id" Width="70" Visibility="Collapsed"></igDP:Field>
        <igDP:Field Name="def_account_code" Label="Def Account" Width="70" Visibility="Collapsed"></igDP:Field>


    </igDP:FieldLayout>

    <igDP:FieldLayout x:Key="DefPoolLookup" x:Shared="False">
        <igDP:Field Name="def_account_code" Label="Def Account" Width="200">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False">
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamMaskedEditor}">
                            <Setter Property="Mask" Value="AA-####-#####-####-####-##"/>
                            <Setter Property="DataMode" Value="Raw"/>
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="description" Label="Account Description" Width="220"  ></igDP:Field>
        <igDP:Field Name="current_amount_deferred" Label="Amount Deferred" Width="120">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False">
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamNumericEditor}" >
                            <Setter Property="Format" Value="$###,##0.00;($###,##0.00)"  />
                            <Setter Property="Foreground" Value="{Binding Path=Cells[current_amount_deferred].Value, Converter={StaticResource NegativeToRedConverter}}"/>
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>



       
    </igDP:FieldLayout>


</ResourceDictionary>
