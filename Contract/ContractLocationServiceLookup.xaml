        <Border Name="TemplateBorder" Grid.ColumnSpan="6" Grid.Row="1" Grid.RowSpan="2"  BorderBrush="Gray" BorderThickness="0,0,0,1" >
            <Grid MaxHeight="250">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <RazerBase:ucLabelTextBox Name="txtCustomerID" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" LabelText="Customer Num:" LabelWidth="100" MouseDoubleClick="txtCustomerID_MouseDoubleClick" LostFocus="txtCustomerID_LostFocus" />
                <RazerBase:ucLabelDatePicker Name="dtpBillActiveDate" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" LabelText="Bill Active Date:" LabelWidth="120" />
                <RazerBase:ucLabelDatePicker Name="dtpBeginBillDate" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" LabelText="Begin Bill Date:" LabelWidth="120" />
                <RazerBase:ucLabelDatePicker Name="dtpContractBillStartDate" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" LabelText="Contract Bill Start Date:" LabelWidth="180" />
                <RazerBase:ucLabelDatePicker Name="dtpModifyLaunchDate" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" LabelText="Modify Launch Date:" LabelWidth="120" />
                <RazerBase:ucLabelCheckBox Name="chkNeverBill" Grid.Row="2" Grid.Column="0" LabelText="Never Bill:" LabelWidth="80" />
                <RazerBase:ucLabelCheckBox Name="chkGroupBill" Grid.Row="2" Grid.Column="1" LabelText="Group Bill:" LabelWidth="80" />
                <RazerBase:ucLabelCheckBox Name="chkTransfer" Grid.Row="2" Grid.Column="2" LabelText="Transfer:" LabelWidth="80" />
            </Grid>
        </Border>
        <Label Grid.Column="0" Grid.Row="4" FontStyle="Italic">Select Location(s)</Label>
        <Button Name="btnSave" Grid.Column="5" Grid.Row="4" Content="Save Locations" MaxHeight="30" Click="btnSave_Click" />
        <RazerBase:ucBaseGrid x:Name="GridLocationsAll" Grid.Row="5" Grid.ColumnSpan="6" ></RazerBase:ucBaseGrid>
        <Label Grid.Column="0" Grid.Row="6" FontStyle="Italic">Location Workspace</Label>
        <RazerBase:ucBaseGrid x:Name="GridLocationsFinal" Grid.Row="7" Grid.ColumnSpan="6" ></RazerBase:ucBaseGrid>
