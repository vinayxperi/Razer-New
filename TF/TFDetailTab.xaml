<RazerBase:ScreenBase x:Class="TF.TFDetailTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="720"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <RazerBase:ucLabelTextBox Name="txtLocationInvoice" LabelText="Invoice Number:" BindPath="invoice_number" Grid.Column="1" LabelWidth="100" Grid.Row="1" Grid.ColumnSpan="2"
                                          MouseDoubleClick="txtLocationInvoice_MouseDoubleClick" />
        <Button Name="btnAutoCreate" Height="30" Width="150" Grid.Column="3" Grid.Row="1" Click="RunAutoCreate">Auto Create</Button>
        <!--<local:ucLabelCheckBox Name="chkShowHistoy" LabelText="Show All History" LabelWidth="120"  UnChecked="chkShowHistoy_UnChecked" Checked="chkShowHistoy_Checked" />-->
        <local:ucBaseGrid x:Name="gTFDetails" Grid.Row="2" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3"></local:ucBaseGrid>
        <!--<local:ucBaseGrid x:Name="GridAcctHistoryAll" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"></local:ucBaseGrid>-->
    </Grid>
</RazerBase:ScreenBase>
