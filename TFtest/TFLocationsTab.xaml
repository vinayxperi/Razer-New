<RazerBase:ScreenBase x:Class="BCF.BCFLocationsTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:RazerBase="clr-namespace:RazerBase;assembly=RazerBase" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="720"
             Height="Auto" Width="Auto" Background="{DynamicResource ApplicationBackground}">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="35" />
            <RowDefinition Height="200" />
            <RowDefinition Height="5" />
            <RowDefinition Height="35" />
            <RowDefinition Height="200" />
            <RowDefinition Height="5" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="175" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <RazerBase:ucLabelTextBox Name="txtLocation" LabelText="Location ID:" BindPath="location_id" Grid.Column="1" LabelWidth="120" Grid.Row="1" Grid.ColumnSpan="2"
                                          MouseDoubleClick="txtLocation_MouseDoubleClick" />
        <Button Name="btnAutoCreate" Height="30" Width="150" Grid.Column="3" Grid.Row="1" Click="RunAutoCreate">Auto Create</Button>
        <!--<local:ucLabelCheckBox Name="chkShowHistoy" LabelText="Show All History" LabelWidth="120"  UnChecked="chkShowHistoy_UnChecked" Checked="chkShowHistoy_Checked" />-->
            <local:ucBaseGrid x:Name="gBCFLocations" Grid.Row="2" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="4" ScrollViewer.VerticalScrollBarVisibility= "Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible" ></local:ucBaseGrid>
        <!--<local:ucBaseGrid x:Name="GridAcctHistoryAll" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"></local:ucBaseGrid>-->

        <Label Style="{DynamicResource LabelLightUpStyle}" Grid.Column="1" Grid.Row="4" >PNI Information</Label>
        <RazerBase:ucBaseGrid Name="gBCFLocationsPNI" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" ScrollViewer.VerticalScrollBarVisibility= "Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible" ></RazerBase:ucBaseGrid>

    </Grid>
          </ScrollViewer>
   
</RazerBase:ScreenBase>




