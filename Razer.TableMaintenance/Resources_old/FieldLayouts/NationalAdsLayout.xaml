<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:igWindows="http://infragistics.com/Windows"
                    xmlns:igDP="http://infragistics.com/DataPresenter"
                    xmlns:igEditors="http://infragistics.com/Editors"
                    xmlns:RazerConverters="clr-namespace:RazerConverters;assembly=RazerConverters">

    <RazerConverters:cNegativeToRedConverter x:Key="NegativeToRedConverter"/>

    <igDP:FieldLayout x:Key="NationalAdsDetails" x:Shared="False">
        <igDP:Field Name="air_date" Label="Air Date" Width="100">
            <igDP:Field.Settings>
                <igDP:FieldSettings EditorType="{x:Type igEditors:XamDateTimeEditor}" AllowEdit="False" >
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamDateTimeEditor}" >
                            <Setter Property="Mask" Value="{}{date}" />
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="agency_copy_code" Label="Agency Copy Code" Width="150"></igDP:Field>
        <igDP:Field Name="ad_product" Label="Ad Product" Width="150">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False" />
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="air_time" Label="Air Time" Width="90">
            <igDP:Field.Settings>
                <igDP:FieldSettings EditorType="{x:Type igEditors:XamDateTimeEditor}" AllowEdit="False" >
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamDateTimeEditor}" >
                            <Setter Property="Mask" Value="{}{time}" />                            
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="ad_length" Label="Ad Length" Width="70">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False" />
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="ad_amt" Label="Ad Amt" Width="90">
            <igDP:Field.Settings>
                <igDP:FieldSettings>
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamNumericEditor}" >
                            <Setter Property="Format" Value="$###,##0.00;($###,##0.00)"  />
                            <Setter Property="Foreground" Value="{Binding Path=Cells[ad_amt].Value, Converter={StaticResource NegativeToRedConverter}}"/>
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>                
                <!--<igDP:FieldSettings 
                    EditorType="{x:Type igEditors:XamNumericEditor}"
                    EditorStyle="{DynamicResource ResourceKey=AccountingNumericEditor}"
                    EditAsType="{x:Type sys:Decimal}" />-->
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="record_source" Label="Source" Width="70">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False" />
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="order_line_number" Label="Order Line Number" Width="90">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False" />
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="program_name" Label="Program Name" Width="150">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False" />
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="order_type" Label="Order Type" Width="90">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False" />
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="buy_unit_code" Visibility="Collapsed"  />

        <igDP:Field Name="buy_unit_description" Visibility="Collapsed"  />

        <igDP:Field Name="product_code" Label="Product Code" Width="90">
                      <igDP:Field.Settings>
            <igDP:FieldSettings AllowEdit="False" />
            </igDP:Field.Settings>
        </igDP:Field>
        
        <igDP:Field Name="products_used" Visibility="Collapsed"  />       
        <igDP:Field Name="invoice_number" Visibility="Collapsed"  />                    
    </igDP:FieldLayout>

    
    <igDP:FieldLayout x:Key="NationalAdsViewAttachments" x:Shared="False">
        <igDP:Field Name="attachment_id" Visibility="Collapsed"></igDP:Field>        
        <igDP:Field Name="document_type" Label="Document Type" Width="120">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False" />
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="description" Label="Description" Width="200">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False" />
            </igDP:Field.Settings>
        </igDP:Field>        
        <igDP:Field Name="creation_date" Label="Creation Date" Width="100">
            <igDP:Field.Settings>
                <igDP:FieldSettings EditorType="{x:Type igEditors:XamDateTimeEditor}" AllowEdit="False" >
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamDateTimeEditor}" >
                            <Setter Property="Mask" Value="{}{date}" />
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="deletion_date" Label="Deletion Date" Width="100">
            <igDP:Field.Settings>
                <igDP:FieldSettings EditorType="{x:Type igEditors:XamDateTimeEditor}" AllowEdit="False" >
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamDateTimeEditor}" >
                            <Setter Property="Mask" Value="{}{date}" />
                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="retention_days" Label="Retention Days" Width="100">
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False" />
            </igDP:Field.Settings>
        </igDP:Field>        
        <igDP:Field Name="directory" Visibility="Collapsed" />
        <igDP:Field Name="file_name" Visibility="Collapsed" />
        <igDP:Field Name="server_loc" Visibility="Collapsed" />
    </igDP:FieldLayout>

    <igDP:FieldLayout x:Key="AdsRevenueSplit" x:Shared="False">
        <igDP:Field Name="broadcast_month" Visibility="Collapsed" />
        <igDP:Field Name="product_code" Label="Product Code" Width="110" >
         <igDP:Field.Settings>
            <igDP:FieldSettings AllowEdit="False" />
        </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="product_description" Label="Product" Width="160" >
            <igDP:Field.Settings>
                <igDP:FieldSettings AllowEdit="False" />
            </igDP:Field.Settings>
        </igDP:Field>
        <igDP:Field Name="allocation" Label="Allocation Pct" Width="120" >
            <igDP:Field.Settings>
                <igDP:FieldSettings EditAsType="{x:Type sys:Decimal}" AllowEdit="True">
                    <igDP:FieldSettings.EditorStyle>
                        <Style TargetType="{x:Type igEditors:XamNumericEditor}" >
                            <Setter Property="Mask" Value="{}{double:6.2}" />

                        </Style>
                    </igDP:FieldSettings.EditorStyle>
                </igDP:FieldSettings>
            </igDP:Field.Settings>


        </igDP:Field>
    </igDP:FieldLayout>

    <igDP:FieldLayout x:Key="NationalAdsSearch" x:Shared="False">
        <igDP:Field Name="invoice_number" Label="Invoice Number" Width="100" />
        <igDP:Field Name="invoice_date" Label="Invoice Date" Width="100" />
        <igDP:Field Name="net_amt" Label="Invoice Amount" Width="100" />
        <igDP:Field Name="receivable_account" Label="Customer ID" Width="120" />
        <igDP:Field Name="account_name" Label="Customer Name" Width="150" />
        <igDP:Field Name="advertiser" Label="Advertiser" Width="150" />
        <igDP:Field Name="ad_product" Label="Ad Product" Width="120" />
        <igDP:Field Name="broadcast_month" Label="Broadcast Month" Width="100" />
        <igDP:Field Name="product_code" Label="Product Code" Width="100" />
        <igDP:Field Name="deal_number" Label="Deal Number" Width="100" />
        <igDP:Field Name="order_type" Label="Order Type" Width="100" />
    </igDP:FieldLayout>

    <igDP:FieldLayout x:Key="NationalAdsSearchOnlineLeads" x:Shared="False">
        <igDP:Field Name="invoice_number" Label="Invoice Number" Width="100" />
        <igDP:Field Name="invoice_date" Label="Invoice Date" Width="100" />
        <igDP:Field Name="net_amt" Label="Invoice Amount" Width="100" />
        <igDP:Field Name="receivable_account" Label="Customer Number" Width="120" />
        <igDP:Field Name="account_name" Label="Account Name" Width="150" />
        <igDP:Field Name="product_code" Label="Product Code" Width="100" />
        <igDP:Field Name="billing_period" Label="Billing Period" Width="100" />
        <igDP:Field Name="description" Label="Description" Width="220" />
    </igDP:FieldLayout>
    <igDP:FieldLayout x:Key="NationalAdsSales" x:Shared="False">
        <igDP:Field Name="ae_name" Label="Name" Width="225" />
        <igDP:Field Name="comm_percent" Label="Commission Percent" Width="155">  
           <igDP:Field.Settings>
            <igDP:FieldSettings AllowEdit="False">
                <igDP:FieldSettings.EditorStyle>
                    <Style TargetType="{x:Type igEditors:XamTextEditor}" >
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                </igDP:FieldSettings.EditorStyle>
            </igDP:FieldSettings>
            </igDP:Field.Settings>
           </igDP:Field>              
    </igDP:FieldLayout>
    
</ResourceDictionary>