<local:ScreenBase x:Class="Razer.TableMaintenance.TableListing"                 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RazerBase;assembly=RazerBase"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="880"
             Background="{StaticResource ApplicationBackground}">
    <Grid Name="grdTableMaintenance">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="*" />            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>            
            <RowDefinition Height="500*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <local:ucBaseGrid x:Name="idgTableListing" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"></local:ucBaseGrid>        
        <local:ScreenBase x:Name="gridContent" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" ></local:ScreenBase>
    </Grid>
</local:ScreenBase>
